// --- MODALE EVENTO CALENDARIO ---
const EditEventModal = ({ isOpen, onClose, event, onSave, onDelete }) => {
    const [formData, setFormData] = useState({ title: '', date: '', time: '', description: '', type: 'generic_event' });

    useEffect(() => {
        if (event) {
             setFormData({
                id: event.id || null,
                title: event.title || '',
                date: event.date ? new Date(event.date).toISOString().split('T')[0] : '',
                time: event.time || '',
                description: event.description || '',
                type: 'generic_event'
            });
        } else {
            setFormData({ title: '', date: new Date().toISOString().split('T')[0], time: '', description: '', type: 'generic_event' });
        }
    }, [event, isOpen]);

    if (!isOpen) return null;

    const handleChange = (e) => {
        setFormData({ ...formData, [e.target.name]: e.target.value });
    };

    const handleSubmit = (e) => {
        e.preventDefault();
        onSave(formData);
        onClose();
    };

    return (
        <div className="fixed inset-0 bg-black/50 z-[70] flex items-center justify-center p-4 animate-fade-in">
            <div className="bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden">
                <div className="bg-purple-700 p-4 flex justify-between items-center text-white">
                    <h3 className="font-bold flex items-center gap-2"><CalendarPlus size={18} /> {event?.id ? 'Modifica Evento' : 'Nuovo Evento'}</h3>
                    <button onClick={onClose} className="hover:bg-white/20 p-1 rounded-full"><X size={20}/></button>
                </div>
                <form onSubmit={handleSubmit} className="p-6 space-y-4">
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Titolo</label>
                        <input name="title" value={formData.title} onChange={handleChange} className="w-full border p-2 rounded focus:ring-2 focus:ring-purple-500 outline-none" required placeholder="Es. Sopralluogo" />
                    </div>
                    <div className="grid grid-cols-2 gap-4">
                        <div>
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Data</label>
                            <input type="date" name="date" value={formData.date} onChange={handleChange} className="w-full border p-2 rounded focus:ring-2 focus:ring-purple-500 outline-none" required />
                        </div>
                        <div>
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Ora (Opzionale)</label>
                            <input type="time" name="time" value={formData.time} onChange={handleChange} className="w-full border p-2 rounded focus:ring-2 focus:ring-purple-500 outline-none" />
                        </div>
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Descrizione</label>
                        <textarea name="description" value={formData.description} onChange={handleChange} className="w-full border p-2 rounded focus:ring-2 focus:ring-purple-500 outline-none h-24 resize-none" placeholder="Dettagli aggiuntivi..." />
                    </div>
                    <div className="flex justify-between pt-2 border-t mt-2">
                        {event?.id && onDelete ? (
                             <button type="button" onClick={() => { onDelete(event.id); onClose(); }} className="px-3 py-2 text-red-600 hover:bg-red-50 rounded flex items-center gap-1 font-medium"><Trash2 size={16}/> Elimina</button>
                        ) : <div></div>}
                        <div className="flex gap-2">
                            <button type="button" onClick={onClose} className="px-4 py-2 text-slate-600 hover:bg-slate-100 rounded">Annulla</button>
                            <button type="submit" className="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700 font-medium">Salva</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    );
};


// --- VISTE ---

const LeadsView = ({ leads, handleAddLead, handleDeleteLead, handleUpdateLeadStatus, handleUpdateLeadData, handleDirectConvertToClient }) => {
    const [isAdding, setIsAdding] = useState(false);
    const [editingLead, setEditingLead] = useState(null);
    
    // Stato iniziale con i nuovi campi richiesti
    const [newLead, setNewLead] = useState({ 
        creationDate: new Date().toISOString().split('T')[0],
        type: 'Residenziale',
        name: '', 
        contactPerson: '',
        address: '',
        phone: '', 
        email: '', 
        source: 'Passaparola', 
        status: 'Nuovo Contatto', 
        notes: '' 
    });

    const onSubmit = (e) => {
        e.preventDefault();
        handleAddLead(newLead);
        setIsAdding(false);
        setNewLead({ 
            creationDate: new Date().toISOString().split('T')[0],
            type: 'Residenziale',
            name: '', 
            contactPerson: '',
            address: '',
            phone: '', 
            email: '', 
            source: 'Passaparola', 
            status: 'Nuovo Contatto', 
            notes: '' 
        });
    };

    const columns = [
        { id: 'Nuovo Contatto', label: 'Da Contattare', color: 'bg-slate-50 border-slate-200' },
        { id: 'In Contatto', label: 'In Contatto', color: 'bg-blue-50 border-blue-200' },
        { id: 'Preventivo Inviato', label: 'Preventivo', color: 'bg-purple-50 border-purple-200' },
        { id: 'In Chiusura', label: 'In Chiusura', color: 'bg-amber-50 border-amber-200' }
    ];

    return (
        <div className="flex flex-col h-full space-y-4 animate-fade-in">
            <EditLeadModal 
                isOpen={!!editingLead} 
                onClose={() => setEditingLead(null)} 
                lead={editingLead} 
                onSave={handleUpdateLeadData}
            />

            <div className="flex justify-between items-center shrink-0">
                <h2 className="text-2xl font-bold text-slate-800 flex items-center gap-2"><Target className="text-red-500" /> Pipeline Lead</h2>
                <button onClick={() => setIsAdding(!isAdding)} className="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors flex items-center gap-2 font-medium">
                    {isAdding ? <X size={20}/> : <PlusCircle size={20}/>} {isAdding ? 'Chiudi' : 'Nuovo Lead'}
                </button>
            </div>

            {isAdding && (
                <Card className="p-6 shrink-0 mb-4 animate-fade-in-down border-t-4 border-t-red-500">
                    <form onSubmit={onSubmit} className="grid grid-cols-1 md:grid-cols-12 gap-4">
                        {/* Riga 1: Info Base */}
                        <div className="md:col-span-2">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Data Creazione</label>
                            <input type="date" required className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.creationDate} onChange={e => setNewLead({...newLead, creationDate: e.target.value})} />
                        </div>
                        <div className="md:col-span-3">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Tipologia</label>
                            <select className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.type} onChange={e => setNewLead({...newLead, type: e.target.value})}>
                                <option value="Residenziale">Residenziale</option>
                                <option value="Azienda">Azienda</option>
                                <option value="ASD Calcio">ASD Calcio</option>
                            </select>
                        </div>
                        <div className="md:col-span-7">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Nome / Ragione Sociale</label>
                            <input required placeholder="Es. Mario Rossi o Rossi S.r.l." className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.name} onChange={e => setNewLead({...newLead, name: e.target.value})} />
                        </div>

                        {/* Riga 2: Contatti e Indirizzo */}
                        <div className="md:col-span-4">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Referente</label>
                            <input placeholder="Persona di riferimento" className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.contactPerson} onChange={e => setNewLead({...newLead, contactPerson: e.target.value})} />
                        </div>
                        <div className="md:col-span-8">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Indirizzo Completo</label>
                            <input placeholder="Via Roma 10, Torino" className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.address} onChange={e => setNewLead({...newLead, address: e.target.value})} />
                        </div>

                        {/* Riga 3: Contatti Rapidi */}
                        <div className="md:col-span-4">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Telefono</label>
                            <input placeholder="333..." className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.phone} onChange={e => setNewLead({...newLead, phone: e.target.value})} />
                        </div>
                        <div className="md:col-span-4">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Email</label>
                            <input placeholder="@..." className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.email} onChange={e => setNewLead({...newLead, email: e.target.value})} />
                        </div>
                        <div className="md:col-span-4">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Fonte</label>
                            <select className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.source} onChange={e => setNewLead({...newLead, source: e.target.value})}>
                                <option value="Passaparola">Passaparola</option>
                                <option value="Web/Social">Web/Social</option>
                                <option value="Chiamata a Freddo">Chiamata a Freddo</option>
                                <option value="Fiera/Evento">Fiera/Evento</option>
                                <option value="Altro">Altro</option>
                            </select>
                        </div>

                        {/* Riga 4: Note e Azione */}
                        <div className="md:col-span-12">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Note Rapide</label>
                            <input placeholder="Interesse specifico, urgenza, budget..." className="w-full border p-2 rounded focus:ring-2 focus:ring-red-500 outline-none" value={newLead.notes} onChange={e => setNewLead({...newLead, notes: e.target.value})} />
                        </div>
                        
                        <div className="md:col-span-12 text-right">
                            <button type="submit" className="bg-slate-900 text-white px-6 py-2 rounded-lg font-bold hover:bg-slate-700 shadow-lg">Salva Lead</button>
                        </div>
                    </form>
                </Card>
            )}

            <div className="flex-1 overflow-x-auto">
                <div className="flex h-full gap-4 min-w-[1000px] pb-4">
                    {columns.map(col => (
                        <div key={col.id} className={`flex-1 min-w-[280px] rounded-xl border ${col.color} flex flex-col h-full`}>
                            <div className="p-3 border-b border-inherit bg-white/50 backdrop-blur-sm rounded-t-xl flex justify-between items-center">
                                <span className="font-bold text-slate-700">{col.label}</span>
                                <span className="text-xs bg-white px-2 py-0.5 rounded-full border shadow-sm font-mono">
                                    {(leads || []).filter(l => l.status === col.id).length}
                                </span>
                            </div>
                            <div className="p-2 overflow-y-auto flex-1 space-y-3">
                                {(leads || []).filter(l => l.status === col.id).map(lead => (
                                    <div key={lead.id} className="bg-white p-3 rounded-lg shadow-sm border border-slate-100 hover:shadow-md transition-shadow group relative">
                                        <div className="flex justify-between items-start mb-2">
                                            <div className='flex flex-col'>
                                                <h4 className="font-bold text-slate-800 text-sm leading-tight">{lead.name}</h4>
                                                {lead.contactPerson && <span className="text-[10px] text-slate-500 flex items-center gap-1"><User size={10}/> {lead.contactPerson}</span>}
                                            </div>
                                            <div className="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity absolute top-2 right-2 bg-white/90 p-1 rounded shadow-sm">
                                                <button onClick={() => setEditingLead(lead)} className="text-blue-400 hover:text-blue-600 p-1" title="Modifica"><Pencil size={14}/></button>
                                                <button onClick={() => handleDeleteLead(lead.id)} className="text-slate-300 hover:text-red-500 p-1" title="Elimina"><Trash2 size={14}/></button>
                                            </div>
                                        </div>
                                        
                                        <div className="mb-2">
                                            <TypeBadge type={lead.type || 'Residenziale'} />
                                        </div>

                                        <div className="text-xs text-slate-500 mt-1 space-y-1">
                                            {lead.address && <div className="flex items-center gap-1 text-slate-600 font-medium"><MapPin size={10}/> {lead.address}</div>}
                                            {lead.phone && <div className="flex items-center gap-1"><Phone size={10}/> {lead.phone}</div>}
                                            {lead.email && <div className="flex items-center gap-1"><Mail size={10}/> {lead.email}</div>}
                                            <div className="flex items-center justify-between mt-2 pt-2 border-t border-slate-50 text-[10px] text-slate-400">
                                                <span className="bg-slate-50 px-1 rounded border">{lead.source}</span>
                                                <span>{lead.creationDate ? new Date(lead.creationDate).toLocaleDateString('it-IT') : 'N/D'}</span>
                                            </div>
                                            {lead.notes && <div className="mt-2 p-1.5 bg-yellow-50 text-yellow-800 border border-yellow-100 rounded italic leading-tight">{lead.notes}</div>}
                                        </div>
                                        
                                        <div className="mt-3 pt-2 border-t border-slate-50 flex justify-between items-center">
                                            {col.id !== 'Nuovo Contatto' && (
                                                <button onClick={() => handleUpdateLeadStatus(lead.id, columns[columns.findIndex(c => c.id === col.id) - 1].id)} className="p-1 hover:bg-slate-100 rounded text-slate-400 hover:text-slate-600"><ArrowRight size={14} className="rotate-180"/></button>
                                            )}
                                            
                                            <div className="flex items-center gap-2 ml-auto">
                                                <button 
                                                    onClick={() => handleDirectConvertToClient(lead)}
                                                    className="bg-emerald-600 hover:bg-emerald-700 text-white text-[10px] px-2 py-1 rounded flex items-center gap-1 shadow-sm transition-colors"
                                                    title="Salva come Cliente e vai a Clienti"
                                                >
                                                    <UserPlus size={12}/> Cliente
                                                </button>
                                                
                                                {col.id !== 'In Chiusura' && (
                                                    <button onClick={() => handleUpdateLeadStatus(lead.id, columns[columns.findIndex(c => c.id === col.id) + 1].id)} className="p-1 hover:bg-slate-100 rounded text-blue-500 hover:text-blue-700"><ArrowRight size={14}/></button>
                                                )}
                                            </div>
                                        </div>
                                    </div>
                                ))}
                                {(leads || []).filter(l => l.status === col.id).length === 0 && (
                                    <div className="text-center py-8 opacity-30 text-slate-400 italic text-xs">Vuoto</div>
                                )}
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    );
};

const CalendarView = ({ orders, opportunities, calendarEvents, handleAddCalendarEvent, handleUpdateCalendarEvent, handleDeleteCalendarEvent }) => {
  const [currentDate, setCurrentDate] = useState(new Date());
  const [viewMode, setViewMode] = useState('month'); // 'month' or '3day'
  const [editingEvent, setEditingEvent] = useState(null); // For modal

  const getDaysInMonth = (year, month) => {
    return new Date(year, month + 1, 0).getDate();
  };

  const getFirstDayOfMonth = (year, month) => {
    let day = new Date(year, month, 1).getDay();
    return day === 0 ? 6 : day - 1; // LunedÃ¬ = 0
  };

  const year = currentDate.getFullYear();
  const month = currentDate.getMonth();
  const daysInMonth = getDaysInMonth(year, month);
  const firstDay = getFirstDayOfMonth(year, month);

  // Merge all events
  const events = [];
  
  (orders || []).forEach(order => {
    (order.payments || []).forEach(payment => {
        if(payment.dueDate) {
            const d = new Date(payment.dueDate);
            if (!isNaN(d.getTime())) {
                events.push({
                    date: d,
                    type: 'payment',
                    title: `${order.client} - ${payment.label}`,
                    amount: payment.amount,
                    status: payment.status,
                    id: `${order.id}-${payment.id}`
                });
            }
        }
    });
  });

  (opportunities || []).forEach(opp => {
      if(opp.date) {
          const d = new Date(opp.date);
          if (!isNaN(d.getTime())) {
            events.push({
                date: d,
                type: 'opportunity',
                title: opp.text,
                time: opp.time,
                completed: opp.completed,
                id: opp.id
            });
          }
      }
  });

  (calendarEvents || []).forEach(evt => {
       if (evt.date) {
           const d = new Date(evt.date);
           if (!isNaN(d.getTime())) {
               events.push({
                   date: d,
                   type: 'generic_event',
                   title: evt.title,
                   time: evt.time,
                   description: evt.description,
                   id: evt.id,
                   originalData: evt
               })
           }
       }
  });

  const getEventsForDay = (date) => {
      return events.filter(e => 
          e.date.getDate() === date.getDate() && 
          e.date.getMonth() === date.getMonth() && 
          e.date.getFullYear() === date.getFullYear()
      );
  };

  const monthNames = ["Gennaio", "Febbraio", "Marzo", "Aprile", "Maggio", "Giugno", "Luglio", "Agosto", "Settembre", "Ottobre", "Novembre", "Dicembre"];
  const dayNames = ['Dom', 'Lun', 'Mar', 'Mer', 'Gio', 'Ven', 'Sab'];

  const navigateDate = (direction) => {
      const newDate = new Date(currentDate);
      if (viewMode === 'month') {
          newDate.setMonth(newDate.getMonth() + direction);
      } else {
          newDate.setDate(newDate.getDate() + (direction * 3));
      }
      setCurrentDate(newDate);
  };
  
  const goToToday = () => {
      setCurrentDate(new Date());
  };

  const handleOpenAddModal = () => {
      setEditingEvent({}); // Empty object for new event
  }

  const handleSaveEvent = (data) => {
      if (data.id) {
          handleUpdateCalendarEvent(data);
      } else {
          handleAddCalendarEvent(data);
      }
  }

  const renderMonthView = () => (
      <div className="grid grid-cols-7 gap-px bg-slate-200 rounded-lg overflow-hidden border border-slate-200">
          {['Lun', 'Mar', 'Mer', 'Gio', 'Ven', 'Sab', 'Dom'].map(d => (
              <div key={d} className="bg-slate-50 p-2 text-center text-xs font-bold text-slate-500 uppercase">{d}</div>
          ))}
          
          {[...Array(firstDay)].map((_, i) => (
              <div key={`empty-${i}`} className="bg-white h-32 p-2"></div>
          ))}

          {[...Array(daysInMonth)].map((_, i) => {
              const day = i + 1;
              const date = new Date(year, month, day);
              const daysEvents = getEventsForDay(date);
              const isToday = new Date().toDateString() === date.toDateString();
              
              return (
                  <div key={day} className={`bg-white h-32 p-2 border-t border-l border-slate-100 hover:bg-slate-50 transition-colors relative group ${isToday ? 'bg-blue-50/30' : ''}`}>
                      <span className={`text-sm font-semibold ${isToday ? 'bg-blue-600 text-white w-6 h-6 flex items-center justify-center rounded-full' : 'text-slate-700'}`}>{day}</span>
                      <div className="mt-1 space-y-1 overflow-y-auto max-h-[90px] no-scrollbar">
                          {daysEvents.map((evt, idx) => (
                              <div 
                                  key={idx} 
                                  onClick={() => evt.type === 'generic_event' ? setEditingEvent(evt.originalData) : null}
                                  className={`text-[10px] p-1 rounded border truncate cursor-pointer 
                                      ${evt.type === 'payment' ? (evt.status === 'Pagato' ? 'bg-emerald-100 border-emerald-200 text-emerald-800' : 'bg-amber-100 border-amber-200 text-amber-800') : 
                                        evt.type === 'generic_event' ? 'bg-purple-100 border-purple-200 text-purple-800 hover:bg-purple-200' :
                                        'bg-blue-100 border-blue-200 text-blue-800'}`} 
                                  title={evt.title}
                              >
                                  {evt.type === 'payment' ? 'â‚¬' : evt.type === 'generic_event' ? 'ðŸ“…' : 'â€¢'} {evt.title}
                              </div>
                          ))}
                      </div>
                  </div>
              );
          })}
      </div>
  );

  const renderThreeDayView = () => {
      const days = [];
      for(let i=0; i<3; i++) {
          const d = new Date(currentDate);
          d.setDate(d.getDate() + i);
          days.push(d);
      }
      const hours = Array.from({length: 13}, (_, i) => i + 8); // 08:00 to 20:00

      return (
          <div className="flex flex-col h-[600px] overflow-hidden bg-white rounded-lg border border-slate-200">
              {/* Header Days */}
              <div className="flex border-b border-slate-200">
                  <div className="w-16 border-r border-slate-200 bg-slate-50 flex items-center justify-center text-xs text-slate-400">
                    Tutto il gg
                  </div>
                  {days.map((day, i) => (
                      <div key={i} className="flex-1 p-2 text-center border-r border-slate-200 bg-slate-50 last:border-r-0">
                          <div className="text-xs text-slate-500 uppercase font-bold">{dayNames[day.getDay()]}</div>
                          <div className={`text-lg font-bold ${new Date().toDateString() === day.toDateString() ? 'text-blue-600' : 'text-slate-800'}`}>
                              {day.getDate()} {monthNames[day.getMonth()].substring(0,3)}
                          </div>
                      </div>
                  ))}
              </div>
              
              {/* All Day Row (Fixed Height) */}
               <div className="flex border-b border-slate-200 min-h-[50px]">
                   <div className="w-16 border-r border-slate-200 bg-slate-50"></div>
                   {days.map((day, i) => {
                        const dayEvents = getEventsForDay(day);
                        const allDayEvents = dayEvents.filter(e => !e.time);
                        return (
                            <div key={`allday-${i}`} className="flex-1 border-r border-slate-100 p-1 last:border-r-0">
                                {allDayEvents.map((evt, idx) => (
                                    <div 
                                        key={idx}
                                        onClick={() => evt.type === 'generic_event' ? setEditingEvent(evt.originalData) : null}
                                        className={`text-[10px] p-1 mb-1 rounded border cursor-pointer shadow-sm truncate
                                            ${evt.type === 'generic_event' ? 'bg-purple-100 border-purple-200 text-purple-800' : 'bg-blue-100 border-blue-200 text-blue-800'}`}
                                        title={evt.title}
                                    >
                                        {evt.title}
                                    </div>
                                ))}
                            </div>
                        )
                   })}
               </div>

              {/* Grid */}
              <div className="flex-1 overflow-y-auto">
                  {hours.map(hour => (
                      <div key={hour} className="flex min-h-[60px] border-b border-slate-100">
                          <div className="w-16 border-r border-slate-200 p-2 text-xs text-slate-400 text-right sticky left-0 bg-white">
                              {hour}:00
                          </div>
                          {days.map((day, i) => {
                              // Filter events for this day AND this hour (simple logic)
                              const dayEvents = getEventsForDay(day);
                              const hourEvents = dayEvents.filter(e => {
                                  if (!e.time) return false; 
                                  const eventHour = parseInt(e.time.split(':')[0]);
                                  return eventHour === hour;
                              });

                              return (
                                  <div key={i} className="flex-1 border-r border-slate-100 p-1 relative last:border-r-0">
                                      {hourEvents.map((evt, idx) => (
                                          <div 
                                              key={idx}
                                              onClick={() => evt.type === 'generic_event' ? setEditingEvent(evt.originalData) : null}
                                              className={`text-[10px] p-1 mb-1 rounded border cursor-pointer shadow-sm
                                                  ${evt.type === 'generic_event' ? 'bg-purple-100 border-purple-200 text-purple-800' : 'bg-blue-100 border-blue-200 text-blue-800'}`}
                                          >
                                              <span className="font-bold">{evt.time}</span> {evt.title}
                                          </div>
                                      ))}
                                  </div>
                              );
                          })}
                      </div>
                  ))}
              </div>
          </div>
      );
  };

  return (
    <div className="space-y-6 animate-fade-in">
        <EditEventModal 
            isOpen={!!editingEvent}
            onClose={() => setEditingEvent(null)}
            event={editingEvent}
            onSave={handleSaveEvent}
            onDelete={handleDeleteCalendarEvent}
        />

        <div className="flex justify-between items-center">
             <h2 className="text-2xl font-bold text-slate-800 flex items-center gap-2"><Calendar className="text-blue-600"/> Calendario Scadenze</h2>
             <div className="flex items-center gap-4">
                 <div className="flex bg-slate-100 p-1 rounded-lg">
                     <button 
                        onClick={() => setViewMode('month')} 
                        className={`px-3 py-1 text-sm font-medium rounded-md transition-all ${viewMode === 'month' ? 'bg-white text-blue-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'}`}
                     >
                        Mese
                     </button>
                     <button 
                        onClick={() => setViewMode('3day')} 
                        className={`px-3 py-1 text-sm font-medium rounded-md transition-all ${viewMode === '3day' ? 'bg-white text-blue-600 shadow-sm' : 'text-slate-500 hover:text-slate-700'}`}
                     >
                        3 Giorni
                     </button>
                 </div>

                 <button onClick={handleOpenAddModal} className="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm font-medium transition-colors flex items-center gap-2 shadow-sm"><CalendarPlus size={16}/> Nuovo Evento</button>
                 <button onClick={goToToday} className="px-3 py-1 bg-white text-slate-600 border border-slate-300 rounded-lg text-sm font-medium hover:bg-slate-50 transition-colors">Oggi</button>
                 <div className="flex items-center gap-2 bg-white p-2 rounded-lg shadow-sm border border-slate-200">
                    <button onClick={() => navigateDate(-1)} className="p-1 hover:bg-slate-100 rounded-full"><ChevronRight className="rotate-180" size={20}/></button>
                    <span className="font-bold text-lg w-32 text-center text-slate-800">
                        {viewMode === 'month' ? `${monthNames[month]} ${year}` : 'Naviga'}
                    </span>
                    <button onClick={() => navigateDate(1)} className="p-1 hover:bg-slate-100 rounded-full"><ChevronRight size={20}/></button>
                 </div>
             </div>
        </div>

        {viewMode === 'month' ? renderMonthView() : renderThreeDayView()}
        
        {viewMode === 'month' && (
            <div className="mt-6">
                <h3 className="text-lg font-semibold text-slate-800 mb-4">Agenda del Mese ({monthNames[month]})</h3>
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                     {events.filter(e => e.date.getMonth() === month && e.date.getFullYear() === year).sort((a,b) => a.date - b.date).map((evt, idx) => (
                        <Card key={idx} className="p-4 flex items-start gap-3">
                            <div className={`mt-1 w-10 h-10 rounded-full flex items-center justify-center text-white font-bold text-sm shrink-0 
                                ${evt.type === 'payment' ? 'bg-amber-500' : evt.type === 'generic_event' ? 'bg-purple-500' : 'bg-blue-500'}`}>
                                {evt.date.getDate()}
                            </div>
                            <div className="overflow-hidden flex-1">
                                <div className="flex justify-between items-start">
                                    <p className="font-bold text-slate-800 truncate">{evt.title}</p>
                                    {evt.type === 'generic_event' && <button onClick={() => setEditingEvent(evt.originalData)} className="text-purple-400 hover:text-purple-600"><Pencil size={12}/></button>}
                                </div>
                                <p className="text-xs text-slate-500 mt-1">
                                    {evt.type === 'payment' 
                                        ? `Rata: â‚¬ ${formatCurrency(evt.amount)} - ${evt.status}` 
                                        : (evt.description || `Nota ${evt.time ? 'ore ' + evt.time : ''}`)
                                    }
                                </p>
                            </div>
                        </Card>
                     ))}
                     {events.filter(e => e.date.getMonth() === month && e.date.getFullYear() === year).length === 0 && (
                         <p className="text-slate-400 italic col-span-3 text-center py-4">Nessun evento in programma per questo mese.</p>
                     )}
                </div>
            </div>
        )}
    </div>
  );
};

const DashboardView = ({ orders, setActiveTab, opportunities, leads, calendarEvents }) => {
  const totalOrders = (orders || []).length;
  const totalRevenue = (orders || []).reduce((acc, curr) => acc + (parseFloat(curr.amount) || 0), 0);
  
  const commissionsToLiquidateCount = (orders || []).reduce((acc, order) => {
    return acc + (order.payments || []).filter(p => p.status === 'Pagato' && !p.commissionPaid).length;
  }, 0);

  const activeOpportunities = (opportunities || []).filter(o => !o.completed).slice(0, 3);
  const totalLeads = (leads || []).length;
  
  // Filter upcoming calendar events
  const todayStr = new Date().toISOString().split('T')[0];
  const upcomingEvents = (calendarEvents || [])
    .filter(e => e.date >= todayStr)
    .sort((a, b) => new Date(a.date) - new Date(b.date))
    .slice(0, 3);

  const nextPayout = getNextPayoutDate();
  const nextPaymentMonthLabel = nextPayout.toLocaleDateString('it-IT', { month: 'long', year: 'numeric' });
  
  return (
    <div className="space-y-6 animate-fade-in">
       <div className="mb-8">
        <h1 className="text-3xl font-extrabold text-slate-900 flex items-center gap-2">
           Bentornato, Giulio! <span className="animate-wave origin-bottom-right inline-block">ðŸ‘‹</span>
        </h1>
        <p className="text-slate-500 mt-2 font-medium">Ecco il polso della situazione.</p>
      </div>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        <Card className="p-5 border-l-4 border-l-blue-500 flex items-center justify-between">
            <div className='flex-1'>
              <p className="text-sm text-slate-500 font-medium">Pratiche Totali</p>
              <h3 className="text-3xl font-extrabold text-slate-800 mt-1">{formatNumber(totalOrders)}</h3>
            </div>
            <div className="p-3 bg-blue-50 rounded-full text-blue-600"><FileText size={24} /></div>
        </Card>
        <Card className="p-5 border-l-4 border-l-emerald-500 flex items-center justify-between">
            <div className='flex-1'>
              <p className="text-sm text-slate-500 font-medium">Fatturato</p>
              <h3 className="text-2xl font-extrabold text-slate-800 mt-1">â‚¬ {formatCurrency(totalRevenue)}</h3>
            </div>
            <div className="p-3 bg-emerald-50 rounded-full text-emerald-600"><Wallet size={24} /></div>
        </Card>
         <Card className="p-5 border-l-4 border-l-orange-500 flex items-center justify-between">
            <div className='flex-1'>
              <p className="text-sm text-slate-500 font-medium">Lead in Pipeline</p>
              <h3 className="text-3xl font-extrabold text-slate-800 mt-1">{formatNumber(totalLeads)}</h3>
            </div>
            <div className="p-3 bg-orange-50 rounded-full text-orange-600"><Target size={24} /></div>
        </Card>
        <Card className="p-5 border-l-4 border-l-amber-500 flex items-center justify-between">
            <div className='flex-1'>
              <p className="text-sm text-slate-500 font-medium">Rate Liquidare</p>
              <h3 className="text-3xl font-extrabold text-slate-800 mt-1">{formatNumber(commissionsToLiquidateCount)}</h3>
            </div>
            <div className="p-3 bg-amber-50 rounded-full text-amber-600"><Clock size={24} /></div>
        </Card>
        <Card className="p-5 border-l-4 border-l-purple-500 h-full flex flex-col justify-between">
          <div>
            <p className="text-sm text-slate-500 font-medium mb-2">Prox Liquidazione</p>
            <div className="flex items-end justify-between">
                <h3 className="text-xl font-bold text-purple-700">15 {nextPaymentMonthLabel.split(' ')[0]}</h3>
                <Calendar size={20} className="text-purple-400"/>
            </div>
          </div>
          <div className='mt-2'>
             <button onClick={() => setActiveTab('commissions')} className="text-xs text-purple-600 hover:underline font-semibold flex items-center gap-1">
                Dettagli <ChevronRight size={14} />
            </button>
          </div>
        </Card>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div className="lg:col-span-2">
          <Card className="h-full">
            <div className="p-6 border-b border-slate-100 flex justify-between items-center">
              <h3 className="font-semibold text-slate-800">Ultimi Ordini</h3>
              <button onClick={() => setActiveTab('orders')} className="text-sm text-blue-600 hover:underline">Vedi tutti</button>
            </div>
            <div className="p-0">
              <table className="w-full text-sm text-left">
                <thead className="text-xs text-slate-500 uppercase bg-slate-50">
                  <tr>
                    <th className="px-6 py-3">Cliente</th>
                    <th className="px-6 py-3">Impianto</th>
                    <th className="px-6 py-3">Importo</th>
                    <th className="px-6 py-3">Stato</th>
                  </tr>
                </thead>
                <tbody>
                  {(orders || []).length > 0 ? (
                    orders.slice(0, 5).map(order => (
                      <tr key={order.id} className="border-b hover:bg-slate-50">
                        <td className="px-6 py-4 font-medium text-slate-900">{order.client}</td>
                        <td className="px-6 py-4">{order.type}</td>
                        <td className="px-6 py-4">â‚¬ {formatCurrency(order.amount)}</td>
                        <td className="px-6 py-4"><Badge status={order.status} /></td>
                      </tr>
                    ))
                  ) : (
                    <tr>
                      <td colSpan="4" className="px-6 py-8 text-center text-slate-400 italic">
                        Nessuna pratica presente. Clicca "Nuova Pratica" per iniziare.
                      </td>
                    </tr>
                  )}
                </tbody>
              </table>
            </div>
          </Card>
        </div>
        
        <div className="space-y-6">
             <Card className="p-6">
                <div className="flex justify-between items-center mb-4">
                    <h3 className="font-semibold text-slate-800">OpportunitÃ  / To-Do</h3>
                    <button onClick={() => setActiveTab('opportunities')} className="text-sm text-blue-600 hover:underline">Gestisci</button>
                </div>
                <div className="space-y-4">
                  {(activeOpportunities || []).length > 0 ? (
                    activeOpportunities.map(o => (
                        <div key={o.id} className="flex items-start gap-3">
                            <div className={`mt-1 min-w-[4px] h-[40px] rounded-full ${o.priority === 'rosso' ? 'bg-red-500' : o.priority === 'blu' ? 'bg-blue-500' : 'bg-emerald-500'}`}></div>
                            <div>
                                <p className="text-sm font-medium text-slate-800">{o.text}</p>
                                <p className={`text-xs font-semibold mt-1 ${o.priority === 'rosso' ? 'text-red-500' : o.priority === 'blu' ? 'text-blue-500' : 'text-emerald-600'}`}>
                                    Scadenza: {new Date(o.date).toLocaleDateString('it-IT')} 
                                    {o.time && <span className="ml-1 font-bold">({o.time})</span>}
                                </p>
                            </div>
                        </div>
                    ))
                  ) : (
                    <p className="text-sm text-slate-500 text-center py-4">Nessuna attivitÃ  importante in scadenza.</p>
                  )}
                </div>
            </Card>

            <Card className="p-6">
                <div className="flex justify-between items-center mb-4">
                    <h3 className="font-semibold text-slate-800">Prossimi Eventi</h3>
                    <button onClick={() => setActiveTab('calendar')} className="text-sm text-blue-600 hover:underline">Calendario</button>
                </div>
                <div className="space-y-4">
                    {(upcomingEvents || []).length > 0 ? (
                        upcomingEvents.map(e => (
                            <div key={e.id} className="flex items-center gap-3 p-3 bg-purple-50 rounded-lg border border-purple-100">
                                <div className="text-center bg-white p-1 rounded border border-purple-200 min-w-[40px]">
                                    <p className="text-[10px] text-purple-600 font-bold uppercase">{new Date(e.date).toLocaleString('it-IT', { month: 'short' })}</p>
                                    <p className="text-lg font-bold text-purple-800 leading-none">{new Date(e.date).getDate()}</p>
                                </div>
                                <div>
                                    <p className="text-sm font-bold text-slate-800">{e.title}</p>
                                     {e.time && <p className="text-xs text-slate-500 flex items-center gap-1"><Clock size={10}/> {e.time}</p>}
                                </div>
                            </div>
                        ))
                    ) : (
                        <p className="text-sm text-slate-500 text-center py-4">Nessun evento in programma.</p>
                    )}
                </div>
            </Card>
        </div>
      </div>
    </div>
  );
};

