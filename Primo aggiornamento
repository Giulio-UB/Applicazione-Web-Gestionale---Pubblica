            <input required type="text" className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Es. Mario Rossi" value={newOrder.client} onChange={e => setNewOrder({...newOrder, client: e.target.value})} />
