              className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none min-h-[100px]" 
              placeholder="Inserisci dettagli aggiuntivi, specifiche tecniche o accordi particolari..." 
              value={newOrder.notes} 
              onChange={e => setNewOrder({...newOrder, notes: e.target.value})}
            />
        </div>

        <div className="bg-slate-50 p-6 rounded-lg border border-slate-200">
          <h3 className="text-lg font-semibold text-slate-800 mb-4 flex items-center gap-2"><Wallet className="text-slate-500" size={20}/> Dettagli Economici</h3>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div className="md:col-span-1">
              <label className="block text-sm font-medium text-slate-700 mb-2">Importo Totale (â‚¬)</label>
              <input required type="number" className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="0.00" value={newOrder.amount} onChange={e => setNewOrder({...newOrder, amount: e.target.value})} />
            </div>
            <div className="md:col-span-1">
              <label className="block text-sm font-medium text-slate-700 mb-2">Pagamento Cliente</label>
              <select className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" value={newOrder.installmentsType} onChange={e => setNewOrder({...newOrder, installmentsType: e.target.value})}>
                <option value="1">Soluzione Unica (100%)</option>
                <option value="2">2 Rate (50% - 50%)</option>
                <option value="3">3 Rate (30% - 40% - 30%)</option>
              </select>
            </div>
            <div className="md:col-span-1">
              <label className="block text-sm font-medium text-slate-700 mb-2">Provvigioni (%)</label>
              <input required type="number" min="0" step="0.1" className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="Es. 10.5" value={newOrder.commissionRate} onChange={e => setNewOrder({...newOrder, commissionRate: e.target.value})} />
            </div>
          </div>
        </div>
        <div className="flex justify-end gap-4 pt-4">
          <button type="button" onClick={() => setActiveTab('dashboard')} className="px-6 py-2 text-slate-600 hover:bg-slate-100 rounded-lg font-medium transition-colors">Annulla</button>
          <button type="submit" className="px-6 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 shadow-md transition-colors flex items-center gap-2"><CheckCircle size={18} /> Salva Pratica</button>
        </div>
      </form>
    </Card>
  </div>
);

const OrdersListView = ({ orders, getCompanyPaymentDate, handleDeleteOrder, handleUpdatePaymentStatus, handleDraftEmail, handleUpdateOrder }) => {
  const [loadingAi, setLoadingAi] = useState(null);
  const [editingOrder, setEditingOrder] = useState(null);
  
  const onDraftEmail = async (order) => {
    setLoadingAi(order.id);
    await handleDraftEmail(order);
    setLoadingAi(null);
  };

  const calculateInstallmentCommission = (installmentAmount, totalAmount, commissionRate) => {
      if (totalAmount === 0) return 0;
      const percentage = installmentAmount / totalAmount;
      return totalAmount * (commissionRate / 100) * percentage;
  }
  return (
    <div className="space-y-6 animate-fade-in">
      <EditOrderModal
        isOpen={!!editingOrder}
        onClose={() => setEditingOrder(null)}
        order={editingOrder}
        onSave={handleUpdateOrder}
      />

      <div className="flex justify-between items-center">
        <h2 className="text-2xl font-bold text-slate-800">Archivio Pratiche</h2>
        <div className="flex gap-2"><input type="text" placeholder="Cerca cliente..." className="px-4 py-2 border rounded-lg text-sm w-64 focus:ring-2 focus:ring-blue-500 focus:outline-none" /></div>
      </div>
      <div className="grid gap-6">
        {orders.length === 0 ? (
          <div className="p-12 text-center bg-slate-100 rounded-xl border border-dashed border-slate-300">
             <FileText size={48} className="mx-auto text-slate-300 mb-4" />
             <p className="text-slate-500 font-medium">Nessuna pratica trovata.</p>
             <p className="text-sm text-slate-400">Clicca "Nuova Pratica" dal menu per iniziare.</p>
          </div>
        ) : (
          orders.map(order => {
          const totalCommission = (parseFloat(order.amount) || 0) * (parseFloat(order.commissionRate) || 0) / 100;
          return (
          <Card key={order.id} className="overflow-hidden">
            <div className="p-6">
              <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                <div className="w-1/3 min-w-40">
                  <div className="flex items-center gap-3 mb-1"><h3 className="text-lg font-bold text-slate-800">{order.client}</h3><Badge status={order.status} /></div>
                  <p className="text-slate-500 text-sm flex items-center gap-1">
                    {order.type.includes('Fotovoltaico') || order.type.includes('Solare') || order.type.includes('FV') ? <Sun size={14}/> : <Wind size={14}/>} 
                    {order.type} â€¢ {order.address}
                  </p>
                  <p className="text-xs text-slate-400 mt-1 flex items-center gap-2">
                    {order.contactName && <><User size={12}/> {order.contactName}</>}
                    {order.contact && <><Mail size={12}/> {order.contact}</>} 
                    {order.phone && <><Phone size={12}/> {order.phone}</>}
                  </p>
                  
                  <div className="mt-3 flex gap-2">
                    {order.docsLink && (
                        <a href={order.docsLink} target="_blank" rel="noopener noreferrer" className="flex items-center gap-1 text-[10px] px-2 py-1 bg-blue-50 text-blue-700 rounded border border-blue-200 hover:bg-blue-100 transition-colors">
                           <FolderOpen size={12} /> Drive
                        </a>
                    )}
                    {order.webLink && (
                        <a href={order.webLink} target="_blank" rel="noopener noreferrer" className="flex items-center gap-1 text-[10px] px-2 py-1 bg-slate-50 text-slate-700 rounded border border-slate-200 hover:bg-slate-100 transition-colors">
                           <Globe size={12} /> Sito Web
                        </a>
                    )}
                  </div>

                  {order.notes && (
                    <div className="mt-3 p-2 bg-slate-50 rounded border-l-2 border-slate-300 flex gap-2 items-start">
                        <StickyNote size={12} className="text-slate-400 mt-1 shrink-0" />
                        <p className="text-[11px] text-slate-500 italic leading-relaxed">{order.notes}</p>
                    </div>
                  )}
                </div>
                <div className="w-1/3 text-center my-4 md:my-0">
                    <p className="text-sm font-semibold text-slate-500 uppercase">Totale Compensi ({formatNumber(order.commissionRate)}%)</p>
                    <p className="text-3xl font-extrabold text-emerald-600">â‚¬ {formatCurrency(totalCommission)}</p>
                </div>
                <div className="w-1/3 text-right mt-4 md:mt-0 flex flex-col items-end gap-2">
                    <div className='flex items-center gap-4'>
                        <div className='text-right'><p className="text-xs text-slate-500 font-medium">Importo Totale</p><p className="text-2xl font-bold text-slate-800">â‚¬ {formatCurrency(order.amount)}</p></div>
                         <div className="flex gap-1">
                            <button onClick={() => setEditingOrder(order)} className="p-2 text-blue-500 hover:bg-blue-100 rounded-full transition-colors" title="Modifica Pratica"><Pencil size={20} /></button>
                            <button onClick={() => handleDeleteOrder(order.id, order.client)} className="p-2 text-red-500 hover:bg-red-100 rounded-full transition-colors" title={`Elimina pratica di ${order.client}`}><Trash2 size={20} /></button>
                         </div>
                    </div>
                     <button 
                        onClick={() => onDraftEmail(order)}
                        disabled={loadingAi === order.id}
                        className="flex items-center gap-2 px-3 py-1.5 bg-indigo-50 text-indigo-700 rounded-full border border-indigo-200 text-xs font-semibold hover:bg-indigo-100 transition-colors"
                     >
                        {loadingAi === order.id ? <Loader className="animate-spin" size={12}/> : <Sparkles size={12} className="text-indigo-500" />}
                        {loadingAi === order.id ? 'Generazione...' : 'Crea Bozza Email'}
                    </button>
                </div>
              </div>
              <div className="relative pt-6">
                <div className="absolute top-0 left-0 text-xs font-semibold text-slate-500 uppercase tracking-wider">Stato Pagamenti Cliente</div>
                <div className="flex items-center justify-between gap-4 mt-2">
                  {(order.payments || []).map((payment, idx) => {
                      const comm = calculateCommission(payment.amount, order.amount, order.commissionRate);
                      const isPaid = payment.status === 'Pagato';
                      return (
                        <div key={payment.id} className="flex-1 relative">
                           {idx !== order.payments.length - 1 && (<div className={`absolute top-1/2 -right-4 w-8 h-1 ${isPaid ? 'bg-emerald-500' : 'bg-slate-200'}`} style={{ zIndex: 0 }}></div>)}
                           <div className={`p-3 rounded-lg border ${isPaid ? 'bg-emerald-50 border-emerald-200' : 'bg-white border-slate-200'} relative z-10`}>
                              <div className="flex justify-between items-center mb-1">
                                <span className="text-xs font-bold text-slate-700">{payment.label}</span>
                                <div className='flex items-center gap-2'>
                                    <button onClick={() => handleUpdatePaymentStatus(order.id, payment.id, !isPaid ? 'Pagato' : 'In Attesa', payment.dueDate)} className={`p-1 rounded-full transition-colors ${isPaid ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-emerald-100 text-emerald-600 hover:bg-emerald-200'}`} title={isPaid ? "Segna come In Attesa" : "Segna come Pagato"}>{isPaid ? <Clock size={14} /> : <CheckCircle size={14} />}</button>
                                </div>
                              </div>
                              <p className="text-sm font-semibold text-slate-900">â‚¬ {formatCurrency(payment.amount)}</p>
                              <p className="text-xs text-purple-600 font-medium mb-2">Provv.: â‚¬ {formatCurrency(comm)}</p>
                              <div className='flex items-center text-xs justify-between'>
                                <span className='text-slate-500'>{isPaid ? 'Data incasso:' : 'Scadenza:'}</span>
                                <input type="date" value={payment.dueDate || ''} onChange={(e) => handleUpdatePaymentStatus(order.id, payment.id, payment.status, e.target.value)} className={`w-auto text-xs p-1 rounded-lg border focus:ring-blue-500 focus:outline-none ${isPaid ? 'bg-emerald-100 border-emerald-300 text-emerald-800' : 'bg-slate-50 border-slate-300 text-slate-700'}`} style={{ width: '65%' }} disabled={false} />
                              </div>
                           </div>
                        </div>
                      )})}
                </div>
              </div>
            </div>
            <div className="bg-slate-50 px-6 py-3 border-t border-slate-100 flex justify-end items-center">
              <div className="text-xs font-medium text-purple-700 bg-purple-100 px-3 py-1 rounded-full flex items-center gap-1"><Calendar size={12}/> Pagamento Ditta (Prox 15): {getCompanyPaymentDate(order.date)}</div>
            </div>
          </Card>
        )})
        )}
      </div>
    </div>
  );
};

const ClientsView = ({ orders }) => {
    const uniqueClientsMap = orders.reduce((acc, order) => {
        const clientKey = order.client; 
        if (!acc[clientKey]) {
            acc[clientKey] = { name: order.client, address: order.address, contactName: order.contactName || '', contact: order.contact || 'N/D', phone: order.phone || 'N/D', totalPratiche: 0, totalAmount: 0, pratiche: [] };
        }
        acc[clientKey].totalPratiche += 1;
        acc[clientKey].totalAmount += (parseFloat(order.amount) || 0);
        acc[clientKey].pratiche.push({ 
            id: order.id, 
            type: order.type, 
            status: order.status, 
            date: order.date,
            notes: order.notes,
            docsLink: order.docsLink,
            webLink: order.webLink
        });
        return acc;
    }, {});
    const clients = Object.values(uniqueClientsMap);
    return (
        <div className="space-y-6 animate-fade-in">
            <div className="flex justify-between items-center"><h2 className="text-2xl font-bold text-slate-800">Archivio Clienti ({formatNumber(clients.length)})</h2><input type="text" placeholder="Cerca cliente per nome..." className="px-4 py-2 border rounded-lg text-sm w-64 focus:ring-2 focus:ring-blue-500 focus:outline-none" /></div>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {clients.map((client, index) => (
                    <Card key={index} className="p-5 hover:shadow-lg transition-shadow">
                        <div className="flex justify-between items-start mb-3">
                            <div>
                                <h3 className="text-xl font-bold text-blue-700">{client.name}</h3>
                                {client.contactName && <p className="text-xs font-medium text-slate-500">Referente: {client.contactName}</p>}
                            </div>
                            <div className="text-sm font-semibold px-3 py-1 rounded-full bg-slate-100 text-slate-600">{formatNumber(client.totalPratiche)} Pratic{client.totalPratiche > 1 ? 'he' : 'a'}</div>
                        </div>
                        <div className="space-y-2 text-sm text-slate-600 mb-4">
                            <p className="flex items-center gap-2"><MapPin size={16} className="text-slate-400"/> {client.address}</p>
                            <p className="flex items-center gap-2"><Mail size={16} className="text-slate-400"/> {client.contact}</p>
                            <p className="flex items-center gap-2"><Phone size={16} className="text-slate-400"/> {client.phone}</p>
                            <p className="font-semibold pt-2 text-slate-800">Fatturato Cliente: â‚¬ {formatCurrency(client.totalAmount)}</p>
                        </div>
                        <div className="pt-3 border-t border-slate-100">
                            <p className="text-xs font-semibold text-slate-500 mb-2 uppercase tracking-wider">Storico Pratiche:</p>
                            <ul className="space-y-2">
                                {(client.pratiche || []).map(p => (
                                    <li key={p.id} className="flex justify-between items-start border-b border-slate-50 pb-2 last:border-0 last:pb-0">
                                        <div className="flex flex-col flex-1">
                                            <span className="font-medium text-slate-700 text-xs">{p.type}</span>
                                            <span className="text-[10px] text-slate-400 italic">Contratto: {new Date(p.date).toLocaleDateString('it-IT')}</span>
                                            <div className="flex gap-2 mt-1">
                                                {p.docsLink && <a href={p.docsLink} target="_blank" rel="noopener noreferrer" title="Drive"><FolderOpen size={10} className="text-blue-500"/></a>}
                                                {p.webLink && <a href={p.webLink} target="_blank" rel="noopener noreferrer" title="Sito"><Globe size={10} className="text-slate-500"/></a>}
                                            </div>
                                        </div>
                                        <Badge status={p.status} />
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </Card>
                ))}
            </div>
            {clients.length === 0 && (<div className="p-8 text-center mt-12"><Users size={64} className="mx-auto text-slate-300 mb-4"/><p className="text-slate-500">Nessun cliente trovato. Inserisci una nuova pratica per popolare questo archivio.</p></div>)}
        </div>
    );
};

const CommissionsView = ({ orders, getCompanyPaymentDate, handleUpdateCommissionPaid }) => {
    const paidInstallments = orders.flatMap(order => (order.payments || []).filter(p => p.status === 'Pagato').map(p => ({ paymentId: p.id, paymentLabel: p.label, amount: p.amount, commissionPaid: p.commissionPaid, dueDate: p.dueDate, orderId: order.id, client: order.client, commissionRate: order.commissionRate, totalAmount: order.amount, })));
    const totalCommissionDue = paidInstallments.reduce((acc, p) => acc + calculateCommission(p.amount, p.totalAmount, p.commissionRate), 0);
    // OLD Logic: const totalCommissionPending = paidInstallments.filter(p => !p.commissionPaid).reduce((acc, p) => acc + calculateCommission(p.amount, p.totalAmount, p.commissionRate), 0);
    const pendingPaymentsSorted = paidInstallments.filter(p => !p.commissionPaid).sort((a, b) => new Date(a.dueDate) - new Date(b.dueDate));
    
    const totalPotentialCommissions = orders.reduce((acc, order) => {
        return acc + (order.amount * (order.commissionRate / 100));
    }, 0);
    
    // NEW Logic: Difference between Total Portfolio and Matured (Collected from clients)
    const residualCommissions = totalPotentialCommissions - totalCommissionDue;

    const nextPayout = getNextPayoutDate();
    const nextPayoutLabel = nextPayout.toLocaleDateString('it-IT', { month: 'long', year: 'numeric' });

    // Calcolo del totale da liquidare nella prossima scadenza
    const totalToLiquidate = pendingPaymentsSorted.reduce((acc, p) => acc + calculateCommission(p.amount, p.totalAmount, p.commissionRate), 0);
    
    return (
        <div className="space-y-6 animate-fade-in">
            <h2 className="text-2xl font-bold text-slate-800 flex items-center gap-2"><Wallet className="text-purple-600" /> Rendiconto Provvigioni</h2>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <Card className="p-5 border-l-4 border-l-blue-500">
                    <p className="text-sm text-slate-500 font-medium">Totale Provvigioni (Portafoglio)</p>
                    <h3 className="text-2xl font-bold text-slate-800">â‚¬ {formatCurrency(totalPotentialCommissions)}</h3>
                    <p className="text-[10px] text-slate-400 mt-1">Valore totale contratti inseriti</p>
                </Card>
                <Card className="p-5 border-l-4 border-l-emerald-500"><p className="text-sm text-slate-500 font-medium">Maturate (Incassate Clienti)</p><h3 className="text-2xl font-bold text-emerald-700">â‚¬ {formatCurrency(totalCommissionDue)}</h3></Card>
                <Card className="p-5 border-l-4 border-l-amber-500"><p className="text-sm text-slate-500 font-medium">In Attesa (Da Incassare)</p><h3 className="text-2xl font-bold text-amber-700">â‚¬ {formatCurrency(residualCommissions)}</h3></Card>
                <Card className="p-5 border-l-4 border-l-purple-500">
                    <p className="text-sm text-slate-500 font-medium">Prossima Liquidazione</p>
                    <h3 className="text-lg font-bold text-slate-800">15 {nextPayoutLabel}</h3>
                    <p className="text-xs text-purple-600 font-medium mt-1">({pendingPaymentsSorted.length} provvigioni da liquidare) - <span className="font-bold">â‚¬ {formatCurrency(totalToLiquidate)}</span></p>
                </Card>
            </div>
            <Card className="p-6">
                <h3 className="text-lg font-semibold text-slate-800 mb-4">Dettaglio Pagamenti Provvigioni ({formatNumber(pendingPaymentsSorted.length)} provvigioni da liquidare)</h3>
                <div className='overflow-x-auto'>
                    <table className="min-w-full divide-y divide-slate-200 text-sm">
                        <thead className="bg-slate-50"><tr><th className="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Cliente</th><th className="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Rata Cliente</th><th className="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Importo Cliente</th><th className="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Provvigione</th><th className="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Data Incasso Cliente</th><th className="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Stato Ditta</th><th className="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Azione</th></tr></thead>
                        <tbody className="bg-white divide-y divide-slate-200">
                            {pendingPaymentsSorted.map(p => {
                                const commAmount = calculateCommission(p.amount, p.totalAmount, p.commissionRate);
                                return (
                                <tr key={`${p.orderId}-${p.paymentId}`} className='hover:bg-slate-50'><td className="px-6 py-4 whitespace-nowrap font-medium text-slate-900">{p.client}</td><td className="px-6 py-4 whitespace-nowrap text-slate-600">{p.paymentLabel}</td><td className="px-6 py-4 whitespace-nowrap text-right">â‚¬ {formatCurrency(p.amount)}</td><td className="px-6 py-4 whitespace-nowrap text-right font-bold text-purple-700">â‚¬ {formatCurrency(commAmount)}</td><td className="px-6 py-4 whitespace-nowrap"><span className="font-semibold text-emerald-800">{new Date(p.dueDate).toLocaleDateString('it-IT')}</span></td><td className="px-6 py-4 whitespace-nowrap"><Badge status={p.commissionPaid ? 'Liquidato' : 'In Attesa'} /></td><td className="px-6 py-4 whitespace-nowrap"><button onClick={() => handleUpdateCommissionPaid(p.orderId, p.paymentId, true)} className="px-3 py-1 text-xs bg-purple-500 text-white rounded-lg hover:bg-purple-600 disabled:bg-slate-300" disabled={p.commissionPaid}>{p.commissionPaid ? 'Liquidato' : 'Liquida Ora'}</button></td></tr>
                            )})}
                            {pendingPaymentsSorted.length === 0 && (<tr><td colSpan="7" className="px-6 py-8 text-center text-slate-500">Nessuna provvigione da liquidare al momento.</td></tr>)}
                        </tbody>
                    </table>
                </div>
            </Card>
        </div>
    );
};

const OpportunitiesView = ({ opportunities, handleAddOpportunity, handleToggleCompleteOpportunity, handleDeleteOpportunity, handleGenerateSuggestions }) => {
    const [newText, setNewText] = useState('');
    const [newDate, setNewDate] = useState(new Date().toISOString().split('T')[0]);
    const [newTime, setTime] = useState(''); 
    const [priority, setPriority] = useState('blu');
    const [isGenerating, setIsGenerating] = useState(false);
    
    const handleAdd = (e) => {
        e.preventDefault();
        if (newText.trim() === '') return;
        const newOpp = { 
            text: newText, 
            date: newDate, 
            time: newTime, 
            completed: false,
            priority: priority
        };
        handleAddOpportunity(newOpp);
        setNewText(''); setTime(''); setPriority('blu');
    };

    const onGenerate = async () => {
        setIsGenerating(true);
        await handleGenerateSuggestions();
        setIsGenerating(false);
    }
    
    return (
        <div className="space-y-6 animate-fade-in max-w-4xl mx-auto">
            <div className="flex justify-between items-center">
                <h2 className="text-2xl font-bold text-slate-800 flex items-center gap-2"><Lightbulb className="text-amber-500" /> Promemoria & OpportunitÃ </h2>
                <button 
                    onClick={onGenerate} 
                    disabled={isGenerating}
                    className="flex items-center gap-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all font-medium disabled:opacity-70"
                >
                    {isGenerating ? <Loader className="animate-spin" size={18} /> : <Sparkles size={18} />}
                    {isGenerating ? 'Analisi in corso...' : 'Suggerimenti AI'}
                </button>
            </div>
            
            <Card className="p-6">
                <h3 className="text-lg font-semibold text-slate-800 mb-4">Aggiungi Promemoria</h3>
                <form onSubmit={handleAdd} className="space-y-4">
                    <input type="text" placeholder="Descrizione pratica o attivitÃ ..." value={newText} onChange={(e) => setNewText(e.target.value)} className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:outline-none" required />
                    <div className="flex flex-wrap items-end gap-4">
                        <div className="flex-1">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Data Scadenza</label>
                            <input type="date" value={newDate} onChange={(e) => setNewDate(e.target.value)} className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:outline-none" required />
                        </div>
                        <div className="w-32">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Orario</label>
                            <input type="time" value={newTime} onChange={(e) => setTime(e.target.value)} className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:outline-none" title="Orario (Opzionale)"/>
                        </div>
                        <div className="flex-1 min-w-[200px]">
                            <label className="block text-xs font-bold text-slate-500 uppercase mb-1">PrioritÃ </label>
                            <div className="flex gap-2">
                                <button type="button" onClick={() => setPriority('rosso')} className={`flex-1 py-2 rounded-lg border flex items-center justify-center gap-2 transition-all ${priority === 'rosso' ? 'bg-red-500 text-white border-red-600 shadow-md' : 'bg-white text-red-500 border-red-200 hover:bg-red-50'}`}>
                                     Alta
                                </button>
                                <button type="button" onClick={() => setPriority('blu')} className={`flex-1 py-2 rounded-lg border flex items-center justify-center gap-2 transition-all ${priority === 'blu' ? 'bg-blue-500 text-white border-blue-600 shadow-md' : 'bg-white text-blue-500 border-blue-200 hover:bg-blue-50'}`}>
                                     Media
                                </button>
                                <button type="button" onClick={() => setPriority('verde')} className={`flex-1 py-2 rounded-lg border flex items-center justify-center gap-2 transition-all ${priority === 'verde' ? 'bg-emerald-500 text-white border-emerald-600 shadow-md' : 'bg-white text-emerald-500 border-emerald-200 hover:bg-emerald-50'}`}>
                                     Bassa
                                </button>
                            </div>
                        </div>
                        <button type="submit" className="px-6 py-2 bg-amber-600 text-white rounded-lg font-medium hover:bg-amber-700 shadow-md transition-colors flex items-center gap-2 h-[42px]"><PlusCircle size={18} /> Aggiungi</button>
                    </div>
                </form>
            </Card>
            <h3 className="text-xl font-semibold text-slate-800 pt-4">Lista AttivitÃ </h3>
            <div className="space-y-3">
                {(opportunities || []).map(o => (
                    <Card key={o.id} className={`p-4 flex justify-between items-center transition-all ${o.completed ? 'bg-emerald-50 opacity-70' : 'bg-white border-l-4 shadow-sm'} ${!o.completed && (o.priority === 'rosso' ? 'border-l-red-500' : o.priority === 'blu' ? 'border-l-blue-500' : 'border-l-emerald-500')}`}>
                        <div className="flex items-center gap-4 flex-1">
                            <input 
                                type="checkbox" 
                                checked={o.completed} 
                                onChange={() => handleToggleCompleteOpportunity(o.id)} 
                                className="w-5 h-5 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500 cursor-pointer"
                            />
                            <div className="flex-1">
                                <div className="flex items-center gap-2">
                                    <p className={`font-medium ${o.completed ? 'line-through text-slate-500' : 'text-slate-800'}`}>{o.text}</p>
                                </div>
                                <p className={`text-xs ${o.completed ? 'text-emerald-600' : 'text-slate-500'} mt-1`}>
                                    Scadenza: <span className="font-bold">{new Date(o.date).toLocaleDateString('it-IT')}</span> 
                                    {o.time && <span className="ml-2 px-1.5 py-0.5 bg-slate-100 rounded text-slate-600">{o.time}</span>}
                                </p>
                            </div>
                        </div>
                        <button onClick={() => handleDeleteOpportunity(o.id)} className="p-1.5 text-slate-400 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors" title="Elimina"><Trash2 size={16} /></button>
                    </Card>
                ))}
            </div>
            {(!opportunities || opportunities.length === 0) && (<p className="text-slate-500 text-center py-8 border border-dashed rounded-xl">Nessun promemoria attivo.</p>)}
        </div>
    );
};

const CarCostView = ({ carConfig, updateCarConfig, travels, handleAddTravel, handleDeleteTravel, clients }) => {
  const [distance, setDistance] = useState(100);
  const [client, setClient] = useState('');
  const [travelDate, setTravelDate] = useState(new Date().toISOString().split('T')[0]);
  const [consumption, setConsumption] = useState(carConfig.consumption); 
  const [fuelPrice, setFuelPrice] = useState(carConfig.fuelPrice); 
  const [dailyFixedCost, setDailyFixedCost] = useState(carConfig.dailyFixedCost);

  useEffect(() => {
    setConsumption(carConfig.consumption);
    setFuelPrice(carConfig.fuelPrice);
    setDailyFixedCost(carConfig.dailyFixedCost);
  }, [carConfig]);

  const safeDistance = parseFloat(distance) || 0;
  const safeConsumption = parseFloat(consumption) || 0;
  const safeFuelPrice = parseFloat(fuelPrice) || 0;
  const safeDailyFixedCost = parseFloat(dailyFixedCost) || 0;

  const fuelCost = (safeDistance / 100) * safeConsumption * safeFuelPrice;
  const totalCost = fuelCost + safeDailyFixedCost;

  const handleSaveTravel = (e) => {
    e.preventDefault();
    if (safeDistance <= 0) return;
    const newTravel = { 
        date: travelDate, 
        distance: safeDistance, 
        client: client || 'Spesa Generica', 
        fuelCost: fuelCost, 
        fixedCost: safeDailyFixedCost, 
        totalCost: totalCost 
    };
    handleAddTravel(newTravel);
    setDistance(100); setClient(''); setTravelDate(new Date().toISOString().split('T')[0]);
  };
  
  const handleUpdateConfig = () => {
    const updatedConfig = { 
        consumption: safeConsumption, 
        fuelPrice: safeFuelPrice, 
        dailyFixedCost: safeDailyFixedCost 
    };
    updateCarConfig(updatedConfig);
  };
  
  const uniqueClients = [...new Set((clients || []).map(c => c.client))];

  return (
    <div className="space-y-6 animate-fade-in">
      <h2 className="text-2xl font-bold text-slate-800 flex items-center gap-2"><HardHat className="text-orange-500" /> Gestione Spese di Viaggio</h2>
      <Card className="p-6">
        <h3 className="text-xl font-semibold text-slate-800 border-b pb-3 mb-4 flex items-center gap-2 text-blue-600"><Settings size={20}/> Configurazione Auto</h3>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div><label className="block text-sm font-medium text-slate-700 mb-1">Consumo Medio (L/100km)</label><input type="number" step="0.1" min="0" className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" value={consumption} onChange={e => setConsumption(e.target.value)} /></div>
            <div><label className="block text-sm font-medium text-slate-700 mb-1">Prezzo Carburante (â‚¬/L)</label><input type="number" step="0.01" min="0" className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" value={fuelPrice} onChange={e => setFuelPrice(e.target.value)} /></div>
            <div><label className="block text-sm font-medium text-slate-700 mb-1">Costo Fisso/Giorno (â‚¬)</label><input type="number" step="0.01" min="0" className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" value={dailyFixedCost} onChange={e => setDailyFixedCost(e.target.value)} /></div>
        </div>
        <div className="mt-4 text-right"><button onClick={handleUpdateConfig} className="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 shadow-md transition-colors flex items-center gap-2 ml-auto"><Save size={16} /> Salva Configurazione</button></div>
      </Card>
      <Card className="p-6">
        <h3 className="text-xl font-semibold text-slate-800 border-b pb-3 mb-4 flex items-center gap-2 text-orange-600"><Calculator size={20}/> Registra Nuovo Viaggio</h3>
        <form onSubmit={handleSaveTravel} className="space-y-4">
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div><label className="block text-sm font-medium text-slate-700 mb-1">Data</label><input type="date" required className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-orange-500" value={travelDate} onChange={e => setTravelDate(e.target.value)} /></div>
                <div><label className="block text-sm font-medium text-slate-700 mb-1">Distanza Totale (km)</label><input type="number" step="1" min="0" required className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-orange-500" value={distance} onChange={e => setDistance(e.target.value)} /></div>
                <div className="md:col-span-2">
                    <label className="block text-sm font-medium text-slate-700 mb-1">Cliente Visitato</label>
                    <input list="client-list" type="text" className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-orange-500" placeholder="Seleziona cliente" value={client} onChange={e => setClient(e.target.value)} />
                    <datalist id="client-list">{uniqueClients.map(c => <option key={c} value={c} />)}</datalist>
                </div>
            </div>
            <div className="pt-4 border-t border-slate-100">
                 <div className='flex justify-between items-center text-lg font-medium text-slate-700'><span>Costo Carburante:</span><span className='font-bold text-orange-600'>â‚¬ {formatCurrency(fuelCost)}</span></div>
                 <div className='flex justify-between items-center text-lg font-medium text-slate-700'><span>Costo Fisso/Giorno:</span><span className='font-bold text-slate-700'>â‚¬ {formatCurrency(safeDailyFixedCost)}</span></div>
                 <div className="h-0.5 bg-orange-200 my-2"></div>
                 <div className='flex justify-between items-center text-2xl font-extrabold text-slate-800'><span>Costo Totale:</span><span className='text-emerald-600'>â‚¬ {formatCurrency(totalCost)}</span></div>
            </div>
            <div className="text-right"><button type="submit" className="px-6 py-2 bg-orange-600 text-white rounded-lg font-medium hover:bg-orange-700 shadow-md transition-colors flex items-center gap-2 h-[42px] ml-auto"><MapPin size={18} /> Registra Viaggio</button></div>
        </form>
      </Card>
      <Card className="p-6">
        <h3 className="text-xl font-semibold text-slate-800 mb-4">Archivio Spese di Viaggio</h3>
        {travels.length === 0 ? (<p className="text-slate-500 text-center py-8">Nessun viaggio registrato.</p>) : (
            <div className="overflow-x-auto">
                <table className="min-w-full divide-y divide-slate-200 text-sm">
                    <thead className="bg-slate-50">
                        <tr><th className="px-6 py-3 text-left">Data</th><th className="px-6 py-3 text-left">Cliente</th><th className="px-6 py-3 text-right">Km</th><th className="px-6 py-3 text-right">Carburante</th><th className="px-6 py-3 text-right">Totale</th><th className="px-6 py-3"></th></tr>
                    </thead>
                    <tbody className="bg-white divide-y divide-slate-200">
                        {travels.map(t => (
                            <tr key={t.id} className='hover:bg-slate-50'>
                                <td className="px-6 py-4">{new Date(t.date).toLocaleDateString('it-IT')}</td>
                                <td className="px-6 py-4">{t.client}</td>
                                <td className="px-6 py-4 text-right">{formatNumber(t.distance)}</td>
                                <td className="px-6 py-4 text-right">â‚¬ {formatCurrency(t.fuelCost)}</td>
                                <td className="px-6 py-4 text-right font-bold text-emerald-600">â‚¬ {formatCurrency(t.totalCost)}</td>
                                <td className="px-6 py-4 text-right"><button onClick={() => handleDeleteTravel(t.id)} className="p-1.5 text-red-500 hover:bg-red-100 rounded-full transition-colors"><Trash2 size={16} /></button></td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        )}
      </Card>
    </div>
  );
};


// --- Applicazione Principale ---

export default function GestionaleApp() {
  const [activeTab, setActiveTab] = useState('dashboard');
  const [saveStatus, setSaveStatus] = useState(null); 
  const [resetConfirmStep, setResetConfirmStep] = useState(false);
  
  // AI States
  const [showEmailModal, setShowEmailModal] = useState(false);
  const [generatedEmail, setGeneratedEmail] = useState({ subject: '', body: '' });
  const [isAiLoading, setIsAiLoading] = useState(false);
  const [aiError, setAiError] = useState(false);

  const [db, setDb] = useState(null);
  const [userId, setUserId] = useState(null);
  const [isAuthReady, setIsAuthReady] = useState(false);

  const [orders, setOrders] = useState([]);
  const [opportunities, setOpportunities] = useState([]);
  const [travels, setTravels] = useState([]);
  const [leads, setLeads] = useState([]);
  const [calendarEvents, setCalendarEvents] = useState([]); // NEW: State for calendar events
  const [carConfig, setCarConfig] = useState(INITIAL_CAR_CONFIG);

  useEffect(() => {
    setLogLevel('debug');
    const initFirebase = async () => {
      try {
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        if (!firebaseConfig || !firebaseConfig.apiKey) { setIsAuthReady(true); return; }
        const app = initializeApp(firebaseConfig);
        const firestoreDb = getFirestore(app);
        const firebaseAuth = getAuth(app);
        setDb(firestoreDb);
        const token = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
        if (token) { await signInWithCustomToken(firebaseAuth, token); } else { await signInAnonymously(firebaseAuth); }
        const unsubscribeAuth = onAuthStateChanged(firebaseAuth, (user) => {
          if (user) { setUserId(user.uid); } else { setUserId(crypto.randomUUID()); }
          setIsAuthReady(true);
        });
        return () => unsubscribeAuth();
      } catch (e) { setIsAuthReady(true); }
    };
    initFirebase();
  }, []);

  const getCollectionRef = (collectionName) => {
    if (!db || !userId) return null;
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
    return collection(db, `artifacts/${appId}/users/${userId}/${collectionName}`);
  };

  const getDocRef = (collectionName, docId) => {
    if (!db || !userId) return null;
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
    return doc(db, `artifacts/${appId}/users/${userId}/${collectionName}`, docId);
  }
  
  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const ordersRef = getCollectionRef(STORAGE_KEYS.DB_ORDERS);
    if (!ordersRef) return;
    const unsubscribe = onSnapshot(ordersRef, async (snapshot) => {
      const fetchedOrders = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      if (fetchedOrders.length === 0 && snapshot.metadata.fromCache === false) { 
        const batch = writeBatch(db);
        INITIAL_ORDERS_MOCK.forEach(mockOrder => { batch.set(doc(ordersRef), mockOrder); });
        await batch.commit().catch(e => console.error(e));
      }
      setOrders(fetchedOrders.map(order => ({ ...order, status: calculateOrderStatus(order.payments) })));
      setSaveStatus('loaded'); setTimeout(() => setSaveStatus(null), 1000);
    }, (error) => setSaveStatus('error'));
    return () => unsubscribe(); 
  }, [db, userId, isAuthReady]); 

  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const oppsRef = getCollectionRef(STORAGE_KEYS.DB_OPPS);
    if (!oppsRef) return;
    const unsubscribe = onSnapshot(oppsRef, async (snapshot) => {
      const fetchedOpps = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() })).sort((a, b) => new Date(a.date) - new Date(b.date));
      if (fetchedOpps.length === 0 && snapshot.metadata.fromCache === false) { 
        const batch = writeBatch(db);
        INITIAL_OPPORTUNITIES.forEach(mockOpp => { batch.set(doc(oppsRef), mockOpp); });
        await batch.commit().catch(e => console.error(e));
      }
      setOpportunities(fetchedOpps);
    });
    return () => unsubscribe(); 
  }, [db, userId, isAuthReady]);

  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const travelsRef = getCollectionRef(STORAGE_KEYS.DB_TRAVEL);
    if (!travelsRef) return;
    const unsubscribe = onSnapshot(travelsRef, (snapshot) => {
      setTravels(snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() })).sort((a, b) => new Date(b.date) - new Date(a.date)));
    });
    return () => unsubscribe(); 
  }, [db, userId, isAuthReady]);

  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const leadsRef = getCollectionRef(STORAGE_KEYS.DB_LEADS);
    if (!leadsRef) return;
    const unsubscribe = onSnapshot(leadsRef, async (snapshot) => {
        const fetchedLeads = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
        if (fetchedLeads.length === 0 && snapshot.metadata.fromCache === false) { 
            const batch = writeBatch(db);
            INITIAL_LEADS.forEach(mockLead => { batch.set(doc(leadsRef), mockLead); });
            await batch.commit().catch(e => console.error(e));
        }
        setLeads(fetchedLeads);
    });
    return () => unsubscribe();
  }, [db, userId, isAuthReady]);

  // NEW: Effect for Calendar Events
  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const eventsRef = getCollectionRef(STORAGE_KEYS.DB_EVENTS);
    if (!eventsRef) return;
    const unsubscribe = onSnapshot(eventsRef, (snapshot) => {
      const fetchedEvents = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setCalendarEvents(fetchedEvents);
    });
    return () => unsubscribe(); 
  }, [db, userId, isAuthReady]);
  
  useEffect(() => {
    if (!db || !userId || !isAuthReady) return;
    const configRef = getDocRef(STORAGE_KEYS.DB_TRAVEL, STORAGE_KEYS.DOC_CONFIG);
    if (!configRef) return;
    const unsubscribe = onSnapshot(configRef, async (docSnap) => {
        if (docSnap.exists()) { setCarConfig(docSnap.data()); }
        else { await setDoc(configRef, INITIAL_CAR_CONFIG).catch(e => console.error(e)); setCarConfig(INITIAL_CAR_CONFIG); }
    });
    return () => unsubscribe();
  }, [db, userId, isAuthReady]);

  const [isSidebarOpen, setIsSidebarOpen] = useState(true);
  const [newOrder, setNewOrder] = useState({ client: '', address: '', contactName: '', contact: '', phone: '', type: 'Residenziale: FV+accumulo', amount: '', installmentsType: '2', commissionRate: '10', date: new Date().toISOString().split('T')[0], notes: '', docsLink: '', webLink: '' });

  const handleAddOrder = async (e) => { 
    e.preventDefault(); if (!db || !userId) { setSaveStatus('error'); return; }
    setSaveStatus('saving'); 
    try {
        const amount = parseFloat(newOrder.amount) || 0; 
        const installmentsCount = parseInt(newOrder.installmentsType); 
        const commissionRate = parseFloat(newOrder.commissionRate) || 0;
        
        let defaultDueDateString = "";
        if (newOrder.date) {
            const defaultDueDate = new Date(newOrder.date); 
            defaultDueDate.setDate(defaultDueDate.getDate() + 30); 
            defaultDueDateString = defaultDueDate.toISOString().split('T')[0];
        } else {
             const defaultDueDate = new Date(); 
             defaultDueDate.setDate(defaultDueDate.getDate() + 30); 
             defaultDueDateString = defaultDueDate.toISOString().split('T')[0];
        }
        
        let generatedPayments = [];
        if (installmentsCount === 1) { generatedPayments = [{ id: 1, label: "Unica Soluzione (100%)", amount: amount, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }]; } 
        else if (installmentsCount === 2) { generatedPayments = [{ id: 1, label: "Acconto (50%)", amount: amount * 0.5, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }, { id: 2, label: "Saldo (50%)", amount: amount * 0.5, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }]; } 
        else { generatedPayments = [{ id: 1, label: "Acconto (30%)", amount: amount * 0.3, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }, { id: 2, label: "Materiali (40%)", amount: amount * 0.4, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }, { id: 3, label: "Saldo (30%)", amount: amount * 0.3, status: "In Attesa", dueDate: defaultDueDateString, commissionPaid: false }]; }

        const orderData = { client: newOrder.client, address: newOrder.address, contactName: newOrder.contactName, contact: newOrder.contact, phone: newOrder.phone, type: newOrder.type, amount: amount, installmentsType: newOrder.installmentsType, commissionRate: commissionRate, date: newOrder.date, payments: generatedPayments, notes: newOrder.notes, docsLink: newOrder.docsLink, webLink: newOrder.webLink };
        await addDoc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), orderData); 
        setActiveTab('orders'); 
        setNewOrder({ client: '', address: '', contactName: '', contact: '', phone: '', type: 'Residenziale: FV+accumulo', amount: '', installmentsType: '2', commissionRate: '10', date: new Date().toISOString().split('T')[0], notes: '', docsLink: '', webLink: '' });
        setSaveStatus('saved'); setTimeout(() => setSaveStatus(null), 2000);
    } catch(e) { console.error(e); setSaveStatus('error'); }
  };

  const handleDeleteOrder = async (id) => { 
    if (!db || !userId) return;
    try { await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), id)); setSaveStatus('deleted'); setTimeout(() => setSaveStatus(null), 2000); } catch(e) { setSaveStatus('error'); }
  };
  
  const handleUpdatePaymentStatus = async (orderId, paymentId, newStatus, newDueDate = null) => {
    if (!db || !userId) return;
    const orderToUpdate = orders.find(o => o.id === orderId);
    if (!orderToUpdate) return;
    const updatedPayments = (orderToUpdate.payments || []).map(p => (p.id === paymentId ? { ...p, status: newStatus || p.status, dueDate: newDueDate !== null ? newDueDate : p.dueDate } : p));
    try { await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), orderId), { payments: updatedPayments }); } catch (e) { setSaveStatus('error'); }
  };

  const handleUpdateCommissionPaid = async (orderId, paymentId, isPaid) => {
    if (!db || !userId) return;
    const orderToUpdate = orders.find(o => o.id === orderId);
    if (!orderToUpdate) return;
    const updatedPayments = (orderToUpdate.payments || []).map(p => (p.id === paymentId ? { ...p, commissionPaid: isPaid } : p));
    try { await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), orderId), { payments: updatedPayments }); } catch (e) { setSaveStatus('error'); }
  };
  
  const handleAddOpportunity = async (newOpp) => {
    if (!db || !userId) return;
    try { await addDoc(getCollectionRef(STORAGE_KEYS.DB_OPPS), newOpp); setSaveStatus('saved'); setTimeout(() => setSaveStatus(null), 2000); } catch (e) { setSaveStatus('error'); }
  };

  const handleToggleCompleteOpportunity = async (id) => {
    if (!db || !userId) return;
    const opp = opportunities.find(o => o.id === id);
    if (!opp) return;
    try { await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_OPPS), id), { completed: !opp.completed }); } catch (e) { setSaveStatus('error'); }
  };

  const handleDeleteOpportunity = async (id) => {
    if (!db || !userId) return;
    try { await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_OPPS), id)); setSaveStatus('deleted'); setTimeout(() => setSaveStatus(null), 2000); } catch (e) { setSaveStatus('error'); }
  };

  const updateCarConfig = async (newConfig) => {
    if (!db || !userId) return;
    try {
      const configRef = getDocRef(STORAGE_KEYS.DB_TRAVEL, STORAGE_KEYS.DOC_CONFIG);
      await setDoc(configRef, newConfig);
      setSaveStatus('saved');
      setTimeout(() => setSaveStatus(null), 2000);
    } catch (e) {
      setSaveStatus('error');
    }
  };

  const handleAddTravel = async (travel) => {
    if (!db || !userId) return;
    try {
      await addDoc(getCollectionRef(STORAGE_KEYS.DB_TRAVEL), travel);
      setSaveStatus('saved');
      setTimeout(() => setSaveStatus(null), 2000);
    } catch (e) {
      setSaveStatus('error');
    }
  };

  const handleDeleteTravel = async (id) => {
    if (!db || !userId) return;
    try {
      await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_TRAVEL), id));
      setSaveStatus('deleted');
      setTimeout(() => setSaveStatus(null), 2000);
    } catch (e) {
      setSaveStatus('error');
    }
  };
  
  const handleAddLead = async (lead) => {
      if (!db || !userId) return;
      try { await addDoc(getCollectionRef(STORAGE_KEYS.DB_LEADS), lead); setSaveStatus('saved'); setTimeout(() => setSaveStatus(null), 2000); } catch(e) { setSaveStatus('error'); }
  };

  const handleDeleteLead = async (id) => {
      if (!db || !userId) return;
      try { await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_LEADS), id)); setSaveStatus('deleted'); setTimeout(() => setSaveStatus(null), 2000); } catch(e) { setSaveStatus('error'); }
  };

  const handleUpdateLeadStatus = async (id, newStatus) => {
      if (!db || !userId) return;
      try { await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_LEADS), id), { status: newStatus }); } catch(e) { setSaveStatus('error'); }
  };

  const handleUpdateLeadData = async (updatedLead) => {
      if (!db || !userId) return;
      const { id, ...data } = updatedLead;
      try { 
          await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_LEADS), id), data); 
          setSaveStatus('saved'); 
          setTimeout(() => setSaveStatus(null), 2000); 
      } catch(e) { setSaveStatus('error'); }
  };

  const handleUpdateOrder = async (updatedOrder) => {
      if (!db || !userId) return;
      const { id, ...data } = updatedOrder;
      try { 
          await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), id), data); 
          setSaveStatus('saved'); 
          setTimeout(() => setSaveStatus(null), 2000); 
      } catch(e) { setSaveStatus('error'); }
  };

  const handleDirectConvertToClient = async (lead) => {
      if (!db || !userId) return;
      
      const newOrderData = {
          client: lead.name,
          contactName: lead.contactPerson || '',
          address: lead.address || '',
          phone: lead.phone || '',
          contact: lead.email || '',
          notes: lead.notes ? `[DA LEAD] ${lead.notes}` : '',
          type: lead.type || 'Residenziale: FV+accumulo',
          amount: 0,
          commissionRate: 0,
          installmentsType: '2',
          status: 'Nuovo',
          date: new Date().toISOString().split('T')[0],
          payments: []
      };

      try {
          // 1. Create Order
          await addDoc(getCollectionRef(STORAGE_KEYS.DB_ORDERS), newOrderData);
          // 2. Delete Lead
          await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_LEADS), lead.id));
          // 3. Navigate
          setActiveTab('clients');
          setSaveStatus('saved');
          setTimeout(() => setSaveStatus(null), 2000);
      } catch(e) {
          setSaveStatus('error');
      }
  };

  const handlePromoteToOrder = (lead) => {
      // Pre-fill the New Order form with Lead data and CLEAN other fields
      setNewOrder({
          // Reset defaults
          type: 'Residenziale: FV+accumulo',
          amount: '',
          installmentsType: '2',
          commissionRate: '10',
          date: new Date().toISOString().split('T')[0],
          docsLink: '',
          webLink: '',
          // Fill with lead data
          client: lead.name,
          contactName: lead.contactPerson || '',
          address: lead.address || '',
          phone: lead.phone || '',
          contact: lead.email || '',
          notes: lead.notes ? `[DA LEAD] ${lead.notes}` : ''
      });
      // Switch to New Order tab
      setActiveTab('new');
  };

  // --- CALENDAR EVENTS HANDLERS ---
  const handleAddCalendarEvent = async (event) => {
      if (!db || !userId) return;
      const { id, ...data } = event; // remove ID if present (though new shouldn't have one)
      try {
          await addDoc(getCollectionRef(STORAGE_KEYS.DB_EVENTS), data);
          setSaveStatus('saved');
          setTimeout(() => setSaveStatus(null), 2000);
      } catch(e) { setSaveStatus('error'); }
  };

  const handleUpdateCalendarEvent = async (event) => {
      if (!db || !userId) return;
      const { id, ...data } = event;
      try {
          await updateDoc(doc(getCollectionRef(STORAGE_KEYS.DB_EVENTS), id), data);
          setSaveStatus('saved');
          setTimeout(() => setSaveStatus(null), 2000);
      } catch(e) { setSaveStatus('error'); }
  };

  const handleDeleteCalendarEvent = async (id) => {
      if (!db || !userId) return;
      try {
          await deleteDoc(doc(getCollectionRef(STORAGE_KEYS.DB_EVENTS), id));
          setSaveStatus('deleted');
          setTimeout(() => setSaveStatus(null), 2000);
      } catch(e) { setSaveStatus('error'); }
  };

  const handleResetData = async () => {
    if (!resetConfirmStep) { setResetConfirmStep(true); setTimeout(() => setResetConfirmStep(false), 3000); return; }
    if (!db || !userId) return;
    try {
        setSaveStatus('deleting'); const batch = writeBatch(db);
        const orderDocs = await getDocs(getCollectionRef(STORAGE_KEYS.DB_ORDERS)); orderDocs.forEach(d => batch.delete(d.ref));
        const oppDocs = await getDocs(getCollectionRef(STORAGE_KEYS.DB_OPPS)); oppDocs.forEach(d => batch.delete(d.ref));
        const travelDocs = await getDocs(getCollectionRef(STORAGE_KEYS.DB_TRAVEL)); travelDocs.forEach(d => batch.delete(d.ref));
        const leadDocs = await getDocs(getCollectionRef(STORAGE_KEYS.DB_LEADS)); leadDocs.forEach(d => batch.delete(d.ref));
        const eventDocs = await getDocs(getCollectionRef(STORAGE_KEYS.DB_EVENTS)); eventDocs.forEach(d => batch.delete(d.ref));
        batch.set(getDocRef(STORAGE_KEYS.DB_TRAVEL, STORAGE_KEYS.DOC_CONFIG), INITIAL_CAR_CONFIG);
        await batch.commit();
        setSaveStatus('deleted'); setTimeout(() => setSaveStatus(null), 2000);
    } catch(e) { setSaveStatus('error'); }
    setResetConfirmStep(false);
  };
  
  // --- AI HANDLERS ---
  const handleDraftEmail = async (order) => {
    setIsAiLoading(true);
    setAiError(false);
    setShowEmailModal(true);
    setGeneratedEmail({ subject: 'Generazione in corso...', body: '' });

    const pendingPayments = (order.payments || []).filter(p => p.status === 'In Attesa').map(p => `${p.label} (â‚¬${p.amount})`).join(', ');
    const context = `
      Cliente: ${order.client}
      Tipo Impianto: ${order.type}
      Indirizzo: ${order.address}
      Stato Ordine: ${order.status}
      Pagamenti in Sospeso: ${pendingPayments || 'Nessuno, tutto saldato'}
    `;

    const prompt = `
      Scrivi una bozza di email formale e professionale in italiano per questo cliente.
      Contesto: Sono un consulente energetico.
      Dati Pratica:
      ${context}

      Se ci sono pagamenti in sospeso, sollecitale gentilmente ricordando le scadenze.
      Se Ã¨ tutto saldato e lo stato Ã¨ "Completato", ringrazia per la fiducia.
      Se Ã¨ "In Corso", aggiorna brevemente che i lavori procedono.
      
      Restituisci ESCLUSIVAMENTE un JSON con questo formato:
      {
        "subject": "Oggetto della mail",
        "body": "Corpo della mail..."
      }
    `;

    const result = await callGemini(prompt, "Sei un assistente virtuale per un consulente energetico. Rispondi solo in JSON.");
    
    if (result) {
        setGeneratedEmail(result);
    } else {
        setAiError(true);
    }
    setIsAiLoading(false);
  };

  const handleGenerateSuggestions = async () => {
    if (!db || !userId) return;
    // Prepare concise summary of orders
    const summary = orders.map(o => ({
        client: o.client,
        status: o.status,
        type: o.type,
        unpaid: (o.payments || []).filter(p => p.status !== 'Pagato').length
    }));

    const prompt = `
      Analizza questi ordini di un consulente energetico e suggerisci 3 azioni di follow-up prioritarie.
      Dati: ${JSON.stringify(summary)}
      
      Regole:
      - Focalizzati su clienti con pagamenti in sospeso o pratiche "In Corso".
      - Sii sintetico (max 10 parole per task).
      - Restituisci ESCLUSIVAMENTE un array JSON di stringhe.
      Esempio: ["Chiamare Mario Rossi per saldo", "Inviare documenti a Luigi", "Verificare installazione Verdi"]
    `;

    const suggestions = await callGemini(prompt, "Sei un analista dati esperto. Rispondi solo con un JSON Array di stringhe.");
    
    if (suggestions && Array.isArray(suggestions)) {
        const batch = writeBatch(db);
        suggestions.forEach(text => {
            const ref = doc(getCollectionRef(STORAGE_KEYS.DB_OPPS));
            batch.set(ref, {
                text: `âœ¨ ${text}`,
                date: new Date().toISOString().split('T')[0],
                time: '09:00',
                completed: false,
                priority: 'blu'
            });
        });
        await batch.commit();
        setSaveStatus('saved');
        setTimeout(() => setSaveStatus(null), 2000);
    }
  };

  const getCompanyPaymentDate = (orderDate) => { 
      if (!orderDate) return "N/D";
      const date = new Date(orderDate); 
      if (isNaN(date.getTime())) return "N/D";
      return new Date(date.getFullYear(), date.getMonth() + 1, 15).toLocaleDateString('it-IT', { day: 'numeric', month: 'long', year: 'numeric' }); 
  };
  
  const getActiveTabTitle = (tab) => { 
    switch(tab) { 
        case 'new': return 'Nuova Pratica'; 
        case 'orders': return 'Lista Ordini'; 
        case 'leads': return 'Pipeline Lead';
        case 'clients': return 'Gestione Clienti'; 
        case 'commissions': return 'Rendiconto Provvigioni'; 
        case 'opportunities': return 'Promemoria & OpportunitÃ '; 
        case 'calendar': return 'Calendario Scadenze'; 
        case 'carCost': return 'Costo Auto / Viaggio'; 
        case 'dashboard': default: return 'Dashboard'; 
    } 
  }

  const clientList = orders.map(o => ({ id: o.id, client: o.client }));

  return (
    <div className="flex h-screen bg-slate-50 font-sans text-slate-900">
      <AiDraftModal 
        isOpen={showEmailModal} 
        onClose={() => setShowEmailModal(false)} 
        draft={generatedEmail} 
        isLoading={isAiLoading}
        error={aiError}
      />
      
      <aside className={`${isSidebarOpen ? 'w-64' : 'w-20'} bg-slate-900 text-white transition-all duration-300 flex flex-col shadow-2xl z-20 print:hidden`}>
        <div className="p-6 flex items-center justify-between">
          {isSidebarOpen ? (<div className="flex items-center gap-2"><div className="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center font-bold text-xl">E</div><span className="font-bold text-lg tracking-wide">EnergyApp</span></div>) : (<div className="w-8 h-8 bg-blue-500 rounded-lg mx-auto flex items-center justify-center font-bold text-xl">E</div>)}
        </div>
        <nav className="flex-1 px-4 space-y-2 mt-4">
          <button onClick={() => setActiveTab('dashboard')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'dashboard' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><LayoutDashboard size={20} />{isSidebarOpen && <span>Dashboard</span>}</button>
          <button onClick={() => setActiveTab('leads')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'leads' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><Target size={20} />{isSidebarOpen && <span>Pipeline Lead</span>}</button>
          <button onClick={() => setActiveTab('new')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'new' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><PlusCircle size={20} />{isSidebarOpen && <span>Nuova Pratica</span>}</button>
          <button onClick={() => setActiveTab('orders')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'orders' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><FileText size={20} />{isSidebarOpen && <span>Gestione Ordini</span>}</button>
          <button onClick={() => setActiveTab('calendar')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'calendar' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><Calendar size={20} />{isSidebarOpen && <span>Calendario</span>}</button>
          
          <div className="pt-4 mt-4 border-t border-slate-700">
            <button onClick={() => setActiveTab('carCost')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'carCost' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><HardHat size={20} />{isSidebarOpen && <span>Costo Auto</span>}</button> 
            <button onClick={() => setActiveTab('opportunities')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'opportunities' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><Lightbulb size={20} />{isSidebarOpen && <span>OpportunitÃ </span>}</button>
            <button onClick={() => setActiveTab('clients')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'clients' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><Users size={20} />{isSidebarOpen && <span>Clienti</span>}</button>
            <button onClick={() => setActiveTab('commissions')} className={`w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-colors ${activeTab === 'commissions' ? 'bg-blue-600 text-white shadow-lg' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}><Wallet size={20} />{isSidebarOpen && <span>Provvigioni</span>}</button>
          </div>
        </nav>
        <div className="p-4 border-t border-slate-800 space-y-2">
           <div className={`flex items-center gap-3 ${!isSidebarOpen && 'justify-center'} pt-2 border-t border-slate-700 mt-2`}>
              <div className="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-400 to-emerald-400 flex items-center justify-center text-white font-bold text-sm">LC</div>
              {isSidebarOpen && (<div><p className="text-sm font-semibold">Consulente</p><p className="text-xs text-slate-400">Torino / Piemonte</p></div>)}
           </div>
           <button onClick={handleResetData} className={`w-full flex items-center gap-2 px-3 py-2 rounded-lg transition-colors text-xs font-medium ${!isSidebarOpen && 'justify-center'} ${resetConfirmStep ? 'bg-red-600 text-white hover:bg-red-700 animate-fade-in' : 'text-red-400 hover:bg-red-900/30 hover:text-red-300'}`}>
             {resetConfirmStep ? <AlertTriangle size={16} /> : <Trash2 size={16} />}{isSidebarOpen && <span>{resetConfirmStep ? "CONFERMI?" : "Reset Dati"}</span>}
           </button>
        </div>
      </aside>
      <main className="flex-1 flex flex-col overflow-hidden h-screen relative">
        <header className="bg-white border-b border-slate-200 h-16 flex items-center justify-between px-8 shadow-sm print:hidden">
          <div className="flex items-center gap-4"><button onClick={() => setIsSidebarOpen(!isSidebarOpen)} className="p-2 hover:bg-slate-100 rounded-lg text-slate-600"><Menu size={20} /></button><h1 className="text-xl font-bold text-slate-800 capitalize">{getActiveTabTitle(activeTab)}</h1></div>
          <div className="flex items-center gap-4"><Bell size={20} className="text-slate-500 cursor-pointer" /></div>
        </header>
        <div className="flex-1 overflow-y-auto p-8 bg-slate-50/50 print:p-0 print:bg-white">
          <div className="print:hidden">
            {activeTab === 'dashboard' && <DashboardView orders={orders} setActiveTab={setActiveTab} opportunities={opportunities} leads={leads} calendarEvents={calendarEvents} />}
            {activeTab === 'new' && <NewOrderView newOrder={newOrder} setNewOrder={setNewOrder} handleAddOrder={handleAddOrder} setActiveTab={setActiveTab} />}
            {activeTab === 'leads' && <LeadsView leads={leads} handleAddLead={handleAddLead} handleDeleteLead={handleDeleteLead} handleUpdateLeadStatus={handleUpdateLeadStatus} handleUpdateLeadData={handleUpdateLeadData} handleDirectConvertToClient={handleDirectConvertToClient} handlePromoteToOrder={handlePromoteToOrder} />}
            {activeTab === 'orders' && <OrdersListView orders={orders} getCompanyPaymentDate={getCompanyPaymentDate} handleDeleteOrder={handleDeleteOrder} handleUpdatePaymentStatus={handleUpdatePaymentStatus} handleDraftEmail={handleDraftEmail} handleUpdateOrder={handleUpdateOrder} />}
            {activeTab === 'clients' && <ClientsView orders={orders} />}
            {activeTab === 'commissions' && <CommissionsView orders={orders} getCompanyPaymentDate={getCompanyPaymentDate} handleUpdateCommissionPaid={handleUpdateCommissionPaid} />}
            {activeTab === 'opportunities' && <OpportunitiesView opportunities={opportunities} handleAddOpportunity={handleAddOpportunity} handleToggleCompleteOpportunity={handleToggleCompleteOpportunity} handleDeleteOpportunity={handleDeleteOpportunity} handleGenerateSuggestions={handleGenerateSuggestions} />}
            {activeTab === 'calendar' && <CalendarView orders={orders} opportunities={opportunities} calendarEvents={calendarEvents} handleAddCalendarEvent={handleAddCalendarEvent} handleUpdateCalendarEvent={handleUpdateCalendarEvent} handleDeleteCalendarEvent={handleDeleteCalendarEvent} />}
            {activeTab === 'carCost' && <CarCostView carConfig={carConfig} updateCarConfig={updateCarConfig} travels={travels} handleAddTravel={handleAddTravel} handleDeleteTravel={handleDeleteTravel} clients={clientList} />} 
          </div>
        </div>
        {(saveStatus === 'saved' || saveStatus === 'loaded' || saveStatus === 'deleted') && (
            <div className={`absolute bottom-6 left-8 bg-slate-800 text-white px-4 py-2 rounded-lg shadow-xl flex items-center gap-2 text-sm font-medium animate-fade-in-up z-50 print:hidden`}>
                <Database size={16} className={saveStatus === 'loaded' ? 'text-blue-400' : saveStatus === 'deleted' ? 'text-red-400' : 'text-emerald-400'} />
                {saveStatus === 'saved' && 'Cloud Aggiornato.'}
                {saveStatus === 'loaded' && 'Dati Sincronizzati.'}
                {saveStatus === 'deleted' && 'Eliminato.'}
            </div>
        )}
      </main>
    </div>
  );
}
