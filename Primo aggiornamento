// --- Logica Calcoli & Formattazione ---

const getNextPayoutDate = () => {
  const today = new Date();
  const payout = new Date(today.getFullYear(), today.getMonth(), 15);
  if (today.getDate() > 15) {
    payout.setMonth(payout.getMonth() + 1);
  }
  return payout;
};

const formatCurrency = (value) => {
  if (value === undefined || value === null || isNaN(value)) return "0";
  const rounded = Math.round(Number(value));
  return rounded.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
}

const formatNumber = (value) => {
    if (value === undefined || value === null || isNaN(value)) return "0";
    const parts = value.toString().split(".");
    parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    return parts.join(",");
}

const calculateCommission = (installmentAmount, totalAmount, commissionRate) => {
    if (totalAmount === 0 || !commissionRate) return 0;
    const percentage = installmentAmount / totalAmount;
    if (isNaN(percentage)) return 0;
    return totalAmount * (commissionRate / 100) * percentage;
}

const calculateOrderStatus = (payments) => {
    if (!payments || payments.length === 0) return "Nuovo"; 
    const allPaid = payments.every(p => p.status === 'Pagato');
    const anyPaid = payments.some(p => p.status === 'Pagato');
    if (allPaid) return "Completato";
    else if (anyPaid) return "In Corso";
    else return "Nuovo"; 
};

