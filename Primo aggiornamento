);

const Badge = ({ status }) => {
  const styles = {
    "Pagato": "bg-emerald-100 text-emerald-700",
    "Completato": "bg-emerald-100 text-emerald-700",
    "In Attesa": "bg-amber-100 text-amber-700",
    "In Corso": "bg-blue-100 text-blue-700",
    "Ritardo": "bg-red-100 text-red-700",
    "Nuovo": "bg-slate-100 text-slate-700",
    "Liquidato": "bg-purple-100 text-purple-700",
    "Nuovo Contatto": "bg-slate-100 text-slate-700",
    "In Contatto": "bg-blue-100 text-blue-700",
    "Preventivo Inviato": "bg-purple-100 text-purple-700",
    "In Chiusura": "bg-amber-100 text-amber-800",
    "Perso": "bg-red-100 text-red-700",
    "Vinto": "bg-emerald-100 text-emerald-700"
  };
  return (
    <span className={`px-2.5 py-0.5 rounded-full text-xs font-medium ${styles[status] || "bg-gray-100 text-gray-600"}`}>
      {status}
    </span>
  );
};

const TypeBadge = ({ type }) => {
    let icon = <Home size={10} />;
    let color = "bg-blue-50 text-blue-600 border-blue-200";
    if (type === 'Azienda') {
        icon = <Building size={10} />;
        color = "bg-indigo-50 text-indigo-600 border-indigo-200";
    } else if (type === 'ASD Calcio') {
        icon = <Trophy size={10} />;
        color = "bg-emerald-50 text-emerald-600 border-emerald-200";
    }
    return (
        <span className={`flex items-center gap-1 text-[10px] px-1.5 py-0.5 rounded border ${color} font-semibold uppercase tracking-wide`}>
            {icon} {type}
        </span>
    );
};

const AiDraftModal = ({ isOpen, onClose, draft, isLoading, error }) => {
  if (!isOpen) return null;
  
  return (
    <div className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4 animate-fade-in">
       <div className="bg-white rounded-xl shadow-2xl w-full max-w-lg overflow-hidden">
          <div className="bg-gradient-to-r from-indigo-600 to-purple-600 p-4 flex justify-between items-center text-white">
             <h3 className="font-bold flex items-center gap-2"><Sparkles size={18} /> Assistente AI</h3>
             <button onClick={onClose} className="hover:bg-white/20 p-1 rounded-full"><X size={20}/></button>
          </div>
          <div className="p-6">
             {isLoading ? (
                <div className="flex flex-col items-center justify-center py-8 space-y-4">
                   <Loader className="animate-spin text-purple-600" size={32} />
                   <p className="text-slate-500 text-sm animate-pulse">Generazione in corso con Gemini...</p>
                </div>
             ) : error ? (
                <div className="text-center py-6 text-red-500">
                   <AlertTriangle className="mx-auto mb-2" size={32} />
                   <p>Errore nella generazione. Riprova.</p>
                </div>
             ) : (
                <div className="space-y-4">
                   <div>
                      <label className="text-xs font-bold text-slate-400 uppercase">Oggetto</label>
                      <div className="bg-slate-50 p-3 rounded-lg border border-slate-200 font-medium text-slate-800 mt-1">
                         {draft.subject}
                      </div>
                   </div>
                   <div>
                      <label className="text-xs font-bold text-slate-400 uppercase">Messaggio</label>
                      <textarea 
                        readOnly 
                        className="w-full h-48 bg-slate-50 p-3 rounded-lg border border-slate-200 text-sm text-slate-700 mt-1 focus:outline-none resize-none"
                        value={draft.body}
                      />
                   </div>
                   <button 
                     onClick={() => {
                        navigator.clipboard.writeText(`${draft.subject}\n\n${draft.body}`);
                     }}
                     className="w-full py-2 bg-indigo-50 text-indigo-600 rounded-lg font-medium hover:bg-indigo-100 transition-colors flex items-center justify-center gap-2"
                   >
                      <Copy size={16} /> Copia Testo
                   </button>
                </div>
             )}
          </div>
       </div>
    </div>
  );
};

// --- MODALI ---

const EditOrderModal = ({ isOpen, onClose, order, onSave }) => {
    const [formData, setFormData] = useState(order || {});

    useEffect(() => {
        if (order) setFormData(order);
    }, [order]);

    if (!isOpen || !order) return null;

    const handleChange = (e) => {
        setFormData({ ...formData, [e.target.name]: e.target.value });
    };

    const handleSubmit = (e) => {
        e.preventDefault();
        onSave(formData);
        onClose();
    };

    return (
        <div className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4 animate-fade-in z-[60]">
            <div className="bg-white rounded-xl shadow-2xl w-full max-w-2xl overflow-hidden max-h-[90vh] overflow-y-auto">
                <div className="bg-blue-700 p-4 flex justify-between items-center text-white sticky top-0 z-10">
                    <h3 className="font-bold flex items-center gap-2"><Pencil size={18} /> Modifica Pratica</h3>
                    <button onClick={onClose} className="hover:bg-white/20 p-1 rounded-full"><X size={20}/></button>
                </div>
                <form onSubmit={handleSubmit} className="p-6 grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="md:col-span-2">
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Cliente / Ragione Sociale</label>
                        <input name="client" value={formData.client || ''} onChange={handleChange} className="w-full border p-2 rounded" required />
                    </div>
                    <div className="md:col-span-2">
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Indirizzo Installazione</label>
                        <input name="address" value={formData.address || ''} onChange={handleChange} className="w-full border p-2 rounded" />
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Tipologia Impianto</label>
                        <select name="type" value={formData.type || ''} onChange={handleChange} className="w-full border p-2 rounded">
                            <option value="Residenziale: FV+accumulo">Residenziale: FV+accumulo</option>
                            <option value="PMI: FV+Accumulo">PMI: FV+Accumulo</option>
                            <option value="Fotovoltaico">Fotovoltaico Residenziale</option>
                            <option value="Fotovoltaico Industriale">Fotovoltaico Industriale</option>
                            <option value="Pompa di Calore">Pompa di Calore</option>
                            <option value="Climatizzazione">Climatizzazione</option>
                            <option value="Solare Termico">Solare Termico</option>
                            <option value="Residenziale: FV + Accumulo + PDC">Residenziale: FV + Accumulo + PDC</option>
                            <option value="PMI: FV + Accumulo + PDC">PMI: FV + Accumulo + PDC</option>
                        </select>
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Stato Pratica</label>
                        <select name="status" value={formData.status || ''} onChange={handleChange} className="w-full border p-2 rounded">
                            <option value="Nuovo">Nuovo</option>
                            <option value="In Corso">In Corso</option>
                            <option value="Completato">Completato</option>
                            <option value="In Attesa">In Attesa</option>
                        </select>
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Importo Totale (â‚¬)</label>
                        <input type="number" name="amount" value={formData.amount || ''} onChange={handleChange} className="w-full border p-2 rounded" />
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Provvigioni (%)</label>
                        <input type="number" step="0.1" name="commissionRate" value={formData.commissionRate || ''} onChange={handleChange} className="w-full border p-2 rounded" />
                    </div>
                    
                    <div className="md:col-span-2 border-t pt-4 mt-2">
                        <h4 className="text-sm font-bold text-slate-700 mb-2">Contatti</h4>
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Nome Referente</label>
                        <input name="contactName" value={formData.contactName || ''} onChange={handleChange} className="w-full border p-2 rounded" />
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Email</label>
                        <input name="contact" value={formData.contact || ''} onChange={handleChange} className="w-full border p-2 rounded" />
                    </div>
                    <div>
                        <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Telefono</label>
                        <input name="phone" value={formData.phone || ''} onChange={handleChange} className="w-full border p-2 rounded" />
