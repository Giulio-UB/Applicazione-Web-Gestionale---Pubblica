            <input type="tel" className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="340..." value={newOrder.phone} onChange={e => setNewOrder({...newOrder, phone: e.target.value})} />
